<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="com.collegedekho.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To check if this device has access to internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To retrieve the account name (email) as part of sign-in -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a mDeviceProfile's Google account from an app -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve mDeviceProfile  phone number -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- To retrieve mDeviceProfile  phone number -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- To keep phone awake -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- For haptic feedback -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- Get wifi radio state -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- To read contacts list -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!-- read profile -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Permission to write to external storage -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- Permission to automatically read OTP-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".common.CollegeDekhoApplication"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme"
        >
        <receiver android:name=".receiver.ApplyReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
