<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/AppTheme.CardView.MY_FB_Forums"
    android:id="@+id/card_fb_enumeration_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="horizontal">

<include layout="@layout/layout_unread_notify"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_my_fb_wishlist"
    android:padding="@dimen/m10dp">

        <TextView
            android:id="@+id/fb_members_count"
            android:layout_width="wrap_content"
            style="@style/AppTheme.TextView"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_add_inline23dp"
            android:text="12"
            android:layout_centerVertical="true"/>

    <com.collegedekho.app.widget.CircularImageView
        android:id="@+id/fb_member_institute_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/fb_members_count"
        android:layout_alignTop="@+id/fb_members_count"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/ic_cd"
        android:visibility="visible"
        app:civ_fill_color="@color/white"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/chat_time_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fb_member_institute_logo"
            android:layout_alignTop="@+id/fb_member_institute_logo"
            android:layout_marginLeft="@dimen/m5dp"
            android:layout_marginRight="@dimen/m5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fb_institute_name"
                android:layout_width="wrap_content"
                style="@style/AppTheme.TextView"
                android:layout_height="wrap_content"
                android:text="Indian Institute of Technology"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/fb_institute_location"
                android:layout_width="wrap_content"
                style="@style/AppTheme.TextView"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Delhi"
                android:textSize="10sp"
                android:paddingTop="@dimen/m3dp"/>

        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>