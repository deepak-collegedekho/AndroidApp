<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/m3dp"
    app:cardElevation="@dimen/m6dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/card_qna_answer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/asked_by_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/m8dp"
            android:paddingBottom="@dimen/m8dp"
            android:paddingLeft="@dimen/m16dp"
            android:paddingRight="@dimen/m16dp"
            android:fontFamily="sans-serif-light"
            android:text="anonymous user- asked this 1 months ago "/>

        <TextView
            android:id="@+id/qna_answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m16sp"
            android:paddingTop="@dimen/m8dp"
            android:paddingBottom="@dimen/m8dp"
            android:paddingLeft="@dimen/m16dp"
            android:paddingRight="@dimen/m16dp"
            android:layout_below="@id/asked_by_user"
            android:fontFamily="sans-serif-light"
            android:text="What can I do after my 12 class for becoming a pilot I am still in 12 class with non medical stream Is there any application forms required to be filled???"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/qna_answer_text"
            android:background="@color/light_grey_background"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>