<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textview_college_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Manipal Institute of Technology"
        android:textColor="@color/text_head_blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textview_college_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_college_name"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Manipal, Karnataka | Established in: 1957"
        android:textColor="@color/text_lightest_grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textview_college_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_college_location"
        android:paddingBottom="5dp"
        android:paddingTop="3dp"
        android:text="18 Courses Available"
        android:textColor="@color/text_light_grey"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/college_facility_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_college_courses"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/like_dislike_size"
            android:layout_height="@dimen/like_dislike_size"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_facility"
            android:padding="5dp"
            android:src="@drawable/ic_facility_boys_hostel" />

        <ImageView
            android:layout_width="@dimen/like_dislike_size"
            android:layout_height="@dimen/like_dislike_size"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_facility"
            android:padding="5dp"
            android:src="@drawable/ic_facility_girls_hostel" />

        <ImageView
            android:layout_width="@dimen/like_dislike_size"
            android:layout_height="@dimen/like_dislike_size"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_facility"
            android:padding="5dp"
            android:src="@drawable/ic_facility_computer_services" />

        <ImageView
            android:layout_width="@dimen/like_dislike_size"
            android:layout_height="@dimen/like_dislike_size"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_facility"
            android:padding="5dp"
            android:src="@drawable/ic_facility_counselling" />

        <TextView
            android:layout_width="@dimen/like_dislike_size"
            android:layout_height="@dimen/like_dislike_size"
            android:background="@drawable/bg_grey_circle"
            android:gravity="center"
            android:text="+15"
            android:textColor="@color/white" />
    </LinearLayout>


    <ImageView
        android:id="@+id/button_like_college"
        android:layout_width="@dimen/like_dislike_size"
        android:layout_height="@dimen/like_dislike_size"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview_college_courses"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_like"
        android:src="@drawable/ic_like" />

    <ImageView
        android:id="@+id/button_dislike_college"
        android:layout_width="@dimen/like_dislike_size"
        android:layout_height="@dimen/like_dislike_size"
        android:layout_below="@id/textview_college_courses"
        android:layout_toLeftOf="@id/button_like_college"
        android:background="@drawable/bg_dislike"
        android:src="@drawable/ic_dislike" />

</RelativeLayout>