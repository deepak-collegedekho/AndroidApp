<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.StreamsCardView">

<RelativeLayout
    android:id="@+id/item_institute_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/m12dp">

    <TextView
        android:id="@+id/shortlisted_institute_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:text="Manipal Institute of Technology"
        android:textColor="@color/text_head_blue"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/shortlisted_institute_name">


<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight=".7"
    android:layout_height="wrap_content">

    <TextView

        style="@style/AppTheme.TextView.style2"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:gravity="center|bottom"
        android:paddingBottom="@dimen/m5dp"
        android:paddingLeft="@dimen/m5dp"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:text="Facilities"
        android:textSize="14sp"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/shortlisted_institute_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:gravity="center"
        android:layout_marginRight="@dimen/m10dp"
        android:drawableLeft="@drawable/ic_thumb_like"
        android:drawableTint="@color/bg_category_background"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/college_facility_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:orientation="horizontal">

        <include layout="@layout/item_shortlist_facility" />

        <include layout="@layout/item_shortlist_facility" />

        <include layout="@layout/item_shortlist_facility" />

        <include layout="@layout/item_shortlist_facility" />

    </LinearLayout>
        </RelativeLayout>

        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/shortlisted_institute_image"
            style="@style/AppTheme.ImageView.FadeInImage"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".3"/>
    </LinearLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>