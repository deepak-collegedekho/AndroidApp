<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="@dimen/m2dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

<RelativeLayout
    android:id="@+id/item_institute_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/card_institute_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:text="Manipal Institute of Technology"
        android:layout_marginTop="@dimen/m5dp"
        android:textColor="@color/heading_color"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <include layout="@layout/layout_institute_details_listview"
        android:layout_below="@id/card_institute_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
>

</RelativeLayout>
    </android.support.v7.widget.CardView>