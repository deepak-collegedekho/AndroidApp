<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exam_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingTop="50dp"
        android:paddingRight="@dimen/m40dp"
        android:paddingLeft="@dimen/m40dp"
        android:paddingBottom="@dimen/m15dp"
        android:text="SELECT THE EXAMS YOU ARE PLANNING TO APPEAR"/>

    <ImageView
              android:id="@+id/exam_image"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/exam_textview"
              app:srcCompat="@drawable/ic_exams_user"/>


        <TextView
            style="@style/AppTheme.OrangeButton"
            android:background="@color/primary_orange"
            android:id="@+id/exams_submit_button"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:paddingBottom="@dimen/m9dp"
            android:paddingTop="@dimen/m9dp"
            android:foregroundGravity="center"
            android:visibility="gone"
            android:text="SUBMIT"/>


       <android.support.v7.widget.RecyclerView
            android:id="@+id/exams_recycle_view"
            android:layout_width="match_parent"
            android:layout_below="@id/exam_image"
            android:background="@color/white"
            android:layout_above="@id/exams_submit_button"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/m10dp"
            android:paddingTop="@dimen/m10dp"
            android:gravity="center"
            android:scrollbars="none"
           />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/exam_tour_guide_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:clickable="true"
            android:visibility="gone"
            android:contentDescription="@string/profile_tute_description"
            android:src="@drawable/ic_exam_tute" />
    </FrameLayout>

</RelativeLayout>