<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/stream_radio_group"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/m15dp"
        android:paddingRight="@dimen/m15dp"
        android:layout_gravity="center|left"
        android:layout_height="wrap_content">

        <TextView
            style="@style/AppTheme.TextView.AppTextView"
            android:text="Select Your Stream"
            android:layout_gravity="left"/>

        <RadioButton
            android:id="@+id/firstStream"
            android:checked="true"
            android:layout_marginTop="@dimen/m5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/secondStream"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/m10dp"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        android:id="@+id/select_level_text"
        style="@style/AppTheme.TextView.AppTextView"
        android:paddingLeft="@dimen/m10dp"
        android:layout_gravity="left"
        android:text="Select Your Level"/>

    <RadioGroup
        android:id="@+id/level_radio_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center|left"
        android:paddingLeft="@dimen/m15dp"
        android:paddingRight="@dimen/m15dp"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <RadioButton
            android:id="@+id/firstLevel"
            android:layout_weight=".5"
            android:checked="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/secondLevel"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <TextView
        style="@style/AppTheme.BlueButton"
        android:text="OK"
        android:layout_marginTop="@dimen/m15dp"
        android:id="@+id/ok_button"
        android:gravity="center"
        android:background="@color/primary_color_90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>