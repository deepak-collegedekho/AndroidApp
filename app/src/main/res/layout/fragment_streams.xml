<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/m10dp"
    android:paddingRight="@dimen/activity_horizontal_margin_small">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m1dp"
        app:srcCompat="@drawable/ic_cd_colored"/>

    <com.collegedekho.app.display.androidcharts.diagram.SpiderWebChart
        android:id="@+id/spiderwebchart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:visibility="gone" />



    <TextView android:id="@+id/txt_message"
        style="@style/AppTheme.TextHomeSubHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/m2dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:paddingLeft="@dimen/m5dp"
        android:text="Find college with the majors you want" />

    <GridView
        android:id="@+id/stream_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="@dimen/m8dp"
        android:verticalSpacing="@dimen/m8dp"
        android:numColumns="3"
        android:orientation="vertical"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        tools:listitem="@layout/card_stream">

    </GridView>
</LinearLayout>
