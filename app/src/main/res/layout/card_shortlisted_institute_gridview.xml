<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/m2dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/item_institute_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/m4dp">

        <TextView
            android:id="@+id/card_institute_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:text="Manipal Institute of Technology"
            android:layout_marginBottom="@dimen/m5dp"
            android:textColor="@color/heading_color"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/card_institute_image"
            style="@style/AppTheme.ImageView.FadeInImage"
            android:layout_height="80dp"
            android:layout_below="@id/card_institute_name" />

        <TextView
            android:id="@+id/card_institute_location"
            style="@style/AppTheme.TextView.size11sp"
            android:maxLines="2"
            android:layout_below="@id/card_institute_image"
            android:text="Manipal, Karnataka | Established in: 1957"/>

        <include layout="@layout/layout_institute_details_gridview"
            android:layout_below="@id/card_institute_location"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>