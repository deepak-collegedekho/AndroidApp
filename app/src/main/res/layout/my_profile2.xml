<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_uni1">

    <RelativeLayout
        android:background="#bf000000"
        android:paddingTop="@dimen/m30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/m30dp"
        android:paddingRight="@dimen/m30dp">

        <LinearLayout
            android:id="@+id/profile_editLL"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                style="@style/AppTheme.EditText.Profile"
                android:id="@+id/profile_name"
                android:inputType="textCapWords"
                android:layout_marginTop="@dimen/m20dp"
                android:hint="Name"
                android:textColorHint="@color/textSecondary"
                android:maxLength="35"/>

            <EditText
                style="@style/AppTheme.EditText.Profile"
                android:id="@+id/profile_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textSecondary"
                android:hint="Email"
                android:visibility="gone"/>

            <EditText
                style="@style/AppTheme.EditText.Profile"
                android:id="@+id/profile_contact"
                android:hint="Phone"
                android:textColorHint="@color/textSecondary"
                android:inputType="phone"
                android:maxLength="10"/>

            <LinearLayout
                android:layout_below="@id/profile_editLL"
                android:id="@+id/profile_StreamLL"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    style="@style/AppTheme.EditText.Profile"
                    android:id="@+id/profile_stream"
                    android:hint="Stream"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_weight=".9"/>

                <LinearLayout
                    android:id="@+id/stream_edit"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:paddingTop="@dimen/m35dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:alpha=".5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:background="@drawable/edit_icon"/>
                </LinearLayout>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    style="@style/AppTheme.EditText.Profile"
                    android:id="@+id/profile_level"
                    android:layout_weight=".9"
                    android:layout_width="0dp"
                    android:hint="Level"
                    android:editable="false"
                    android:focusable="false"/>
                <LinearLayout
                    android:id="@+id/level_edit"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:paddingTop="@dimen/m35dp"
                    android:gravity="center"
                    android:layout_height="match_parent">

                <ImageView
                    android:alpha=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:background="@drawable/edit_icon"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/profile_editLL"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/profile_update"
                style="@style/AppTheme.BlueButton"
                android:layout_width="match_parent"
                android:gravity="center|top"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>