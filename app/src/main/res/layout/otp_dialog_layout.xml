<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:padding="@dimen/m10dp"
        android:text="Phone Verification"
        android:textColor="@color/white"
        android:textSize="@dimen/m18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:padding="@dimen/m10dp"
        android:text="Enter your mobile number"
        android:textColor="@color/black"
        android:textSize="@dimen/m18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m10dp"
        android:layout_marginRight="@dimen/m10dp"
        android:layout_marginTop="@dimen/m10dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/plus_nine_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_exam_border"
            android:gravity="center"
            android:padding="@dimen/m4dp"
            android:layout_marginRight="@dimen/m4dp"
            android:paddingBottom="@dimen/m5dp"
            android:paddingTop="@dimen/m5dp"
            android:text="+91 -"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/user_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_exam_border"
            android:paddingBottom="@dimen/m5dp"
            android:paddingTop="@dimen/m5dp"
            android:paddingLeft="@dimen/m4dp"
            android:inputType="phone"
            android:maxLength="10" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:orientation="horizontal"
        android:padding="@dimen/m10dp">

        <TextView
            android:id="@+id/btn_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            android:paddingBottom="@dimen/m12dp"
            android:paddingTop="@dimen/m12dp"
            android:text="CANCEL"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            android:paddingBottom="@dimen/m12dp"
            android:paddingTop="@dimen/m12dp"
            android:text="SEND"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resend_otp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/m12dp"
        android:paddingTop="@dimen/m2dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Haven't received the OTP yet?" />

        <TextView
            android:id="@+id/btn_dialog_nutral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text=" Resend"
            android:textColor="@color/primary_color" />
    </LinearLayout>
</LinearLayout>