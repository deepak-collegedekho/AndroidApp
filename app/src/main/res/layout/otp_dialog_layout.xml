<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:padding="@dimen/m10dp"
        android:text="Phone Verification"
        android:textColor="@color/white"
        android:textSize="@dimen/m18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:text="Enter phone number:"
        android:textColor="@color/black"
        android:padding="@dimen/m10dp"
        android:textSize="@dimen/m18sp" />

    <EditText
        android:id="@+id/user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:inputType="phone"
        android:layout_marginLeft="@dimen/m10dp"
        android:layout_marginRight="@dimen/m10dp"
        android:maxLength="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:padding="@dimen/m10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m2dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/m12dp"
            android:paddingBottom="@dimen/m12dp"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_dialog_nutral"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m2dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/m12dp"
            android:paddingBottom="@dimen/m12dp"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            android:text="RESEND OTP"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m2dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/m12dp"
            android:paddingBottom="@dimen/m12dp"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>