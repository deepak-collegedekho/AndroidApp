<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.LinearLayout.Vertical"
    android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/card_institute_cources"
                style="@style/AppTheme.TextView.size11sp"
                android:paddingTop="0dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="wrap_content"
                android:text="18 Courses Available"   />

            <include layout="@layout/layout_shortlist"
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="wrap_content"/>

            <include layout="@layout/layout_like_button"
                android:id="@+id/card_item_like_layout"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"/>

        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:weightSum="1">
    <LinearLayout
        android:id="@+id/card_college_facility_list"
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/item_facility" />

        <include layout="@layout/item_facility" />

        <include layout="@layout/item_facility" />

        <include layout="@layout/item_facility" />

        <TextView
            android:layout_width="@dimen/m25dp"
            android:layout_height="@dimen/m25dp"
            android:background="@drawable/bg_grey_circle"
            android:gravity="center"
            android:text="+15"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <include layout="@layout/layout_remove_expand"
        android:id="@+id/layout_item_expand"
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>