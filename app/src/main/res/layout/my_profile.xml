<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_uni1">

        <RelativeLayout
            android:layout_marginTop="@dimen/m30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/m30dp"
            android:paddingRight="@dimen/m30dp">

            <LinearLayout
                android:id="@+id/profile_editLL"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/profile_name"
                    android:inputType="textCapWords"
                    android:hint="Name"
                    android:maxLength="25"/>

                <EditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/profile_email"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:visibility="gone"/>

                <EditText
                    style="@style/AppTheme.EditText"
                    android:id="@+id/profile_contact"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLength="10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stream_level_title"
                android:layout_below="@id/profile_editLL"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m20dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:background="@color/bg_category_background"
                    android:alpha=".7"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:text="Level"/>

                <TextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:background="@color/bg_category_background"
                    android:alpha=".7"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:text="Stream"
                    android:layout_marginLeft="@dimen/m5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/stream_level_title"
                android:id="@+id/profile_editStreamLL"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/level_cardView"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_marginRight="@dimen/m5dp"
                    android:layout_height="match_parent"
                    android:alpha=".8">

                    <TextView
                        style="@style/AppTheme.TextHomeSubHead.Medium"
                        android:id="@+id/profile_level"
                        android:maxLines="3"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:padding="@dimen/m5dp"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/edit_icon"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_toRightOf="@id/level_cardView"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="match_parent"
                    android:alpha=".8">
                    <TextView
                        style="@style/AppTheme.TextHomeSubHead.Medium"
                        android:id="@+id/profile_stream"
                        android:maxLines="3"
                        android:padding="@dimen/m5dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/edit_icon"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <TextView
                android:id="@+id/profile_update"
                style="@style/AppTheme.BlueButton"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_below="@id/profile_editStreamLL"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m30dp"
                android:text="Update"
                android:textSize="16sp"/>
        </RelativeLayout>
</ScrollView>