<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:weightSum="1">

  <RelativeLayout
      android:id="@+id/j_layout1"
      android:layout_width="0dip"
      android:layout_marginRight="@dimen/m5dp"
      android:layout_height="wrap_content"
      android:layout_weight=".35">

    <TextView
        android:id="@+id/j_options1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHERE YOU ARE"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_right_border"
        android:textColor="@android:color/black"
        android:gravity="center"/>
    <com.collegedekho.app.widget.NumberPicker
        android:id="@+id/exam_number_picker"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/m8dp"
        android:textColor="@color/primary_orange"
        android:layout_below="@id/j_options1_title"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/j_layout2"
      android:layout_width="0dip"
      android:layout_marginRight="@dimen/m5dp"
      android:layout_height="wrap_content"
      android:layout_weight=".47">
    <TextView
        android:id="@+id/j_options2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_right_border"
        android:textColor="@android:color/black"
        android:gravity="center"/>
    <com.collegedekho.app.widget.NumberPicker
        android:id="@+id/stream_number_picker"
        android:layout_width="match_parent"
        android:layout_below="@id/j_options2_title"
        android:layout_height="wrap_content"/>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/j_layout3"
      android:layout_width="0dip"
      android:layout_height="wrap_content"
      android:layout_weight=".18">
    <TextView
        android:id="@+id/j_options3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MARKS"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="#f5f5f5"
        android:textColor="@android:color/black"
        android:gravity="center"/>


    <com.collegedekho.app.widget.NumberPicker
        android:id="@+id/marks_number_picker"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/m8dp"
        android:layout_below="@id/j_options3_title"
        android:layout_height="wrap_content"/>
  </RelativeLayout>

</LinearLayout>
