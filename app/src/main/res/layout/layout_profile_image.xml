<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="match_parent">


    <com.collegedekho.app.widget.CircularImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile_default"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/profile_image_description"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.collegedekho.app.widget.CircularProgressBar
            android:id="@+id/profile_image_circular_progressbar"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:background_progressbar_color="@android:color/transparent"
            app:background_progressbar_width="0dp"
            android:layout_gravity="center"
            app:progress="100"
            app:progressbar_color="@color/primary_orange"
            app:progressbar_width="3dp"/>

    </FrameLayout>

</RelativeLayout>