<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_empty"/>

    <RelativeLayout
        android:id="@+id/article_detail_layout"
        android:layout_width="match_parent"
        android:background="@color/light_grey_background"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_into_list"
            style="@style/AppTheme.TextView.AppTextView"
            android:text="LIST"
            android:drawableLeft="@drawable/ic_view_list"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view_into_grid"
            android:layout_toEndOf="@+id/view_into_grid" />

        <TextView
            android:id="@+id/view_into_grid"
            style="@style/AppTheme.TextView.AppTextView"
            android:text="GRID"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_view_grid"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:id="@+id/article_detail_scrollView"
            android:layout_width="match_parent"
            android:layout_below="@id/view_into_grid"
            android:scrollbars="none"
            android:scrollbarStyle="insideOverlay"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.collegedekho.app.widget.FadeInImageView
                    android:id="@+id/article_college_banner"
                    style="@style/AppTheme.ImageView.FadeInImage"
                    android:layout_height="200dp"/>

                <TextView
                    android:id="@+id/article_title"
                    style="@style/AppTheme.TextHomeSubHead.Medium"
                    android:paddingLeft="@dimen/m16dp"
                    android:paddingRight="@dimen/m16dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/article_pubdate"
                    style="@style/AppTheme.TextView.style3"
                    android:text="July 13, 2015 06:45 PM"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/article_content"
                    style="@style/AppTheme.TextView.style3"
                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/article_list_recyclerView"
        style="@style/AppTheme.RecyclerView"
        android:layout_below="@id/article_detail_layout"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>