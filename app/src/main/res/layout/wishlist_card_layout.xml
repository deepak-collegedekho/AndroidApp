                    <LinearLayout
                        android:id="@+id/likes_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_toLeftOf="@id/heart_layout"
                        android:background="@drawable/wishlist_bubble"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/m8dp"
                        android:paddingLeft="@dimen/m4dp"
                        android:paddingRight="@dimen/m4dp"
                        android:paddingTop="@dimen/m4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/m4dp"
                            android:padding="@dimen/m2dp"
                            android:src="@drawable/ic_like"/>

                        <TextView
                            android:id="@+id/vote_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/m2dp"
                            android:text="86"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/facilities_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/m2dp">

                        <TextView
                            android:id="@+id/facilities_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="FACILITIES"
                            android:textSize="8sp"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/facilities_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_below="@id/facilities_text"
                            android:layout_marginLeft="@dimen/m10dp"
                            android:layout_marginRight="@dimen/m10dp"
                            android:layout_marginTop="@dimen/m2dp">

                        </android.support.v7.widget.RecyclerView>

                        <RelativeLayout
                            android:id="@+id/see_all_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/facilities_text"

                            android:layout_marginRight="@dimen/m10dp">

                            <TextView
                                android:id="@+id/see_all_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SEE ALL\nFACILITIES"
                                android:textColor="@color/primary_color"
                                android:textSize="6sp"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/see_all_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/see_all_text"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/m1dp"
                                android:src="@drawable/wishlist_arrow_down"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/facilities_recycler"
                            android:layout_marginLeft="@dimen/m10dp"
                            android:layout_marginRight="@dimen/m10dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/end_gradient"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|bottom"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/placement_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/placement_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/wishlist_placement"
                                    />

                                <TextView
                                    android:id="@+id/placement_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/placement_image"
                                    android:layout_centerHorizontal="true"
                                    android:text="80%"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/m10sp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/placement_percentage"
                                    android:layout_centerHorizontal="true"
                                    android:text="Placement"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/m10sp"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/salaries_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/fees_range_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/fees_range_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/wishlist_fees"/>

                                    <TextView
                                        android:id="@+id/fees_range_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/fees_range_image"
                                        android:layout_centerHorizontal="true"
                                        android:text="3-5 lac"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/m10sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/fees_range_text"
                                        android:layout_centerHorizontal="true"
                                        android:text="Fees Range"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/m10sp"/>
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/salary_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/m1dp">

                                <TextView
                                    android:id="@+id/salary_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Salaries"
                                    android:textColor="@color/black"

                                    android:textSize="8sp"/>

                                <TextView
                                    android:id="@+id/max_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/salary_text"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:text="Max"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"/>

                                <TextView
                                    android:id="@+id/max_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/max_sal_txt"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:text="50 Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    />

                                <View
                                    android:id="@+id/max_sal_bar"
                                    android:layout_width="@dimen/m8dp"
                                    android:layout_height="@dimen/m50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/max_sal_val"
                                    android:background="@color/primary_color"/>

                                <View
                                    android:id="@+id/min_sal_bar"
                                    android:layout_width="@dimen/m8dp"
                                    android:layout_height="@dimen/m30dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m4dp"
                                    android:layout_toRightOf="@id/max_sal_bar"
                                    android:background="@color/light_blue"/>

                                <View
                                    android:id="@+id/avg_sal_mark"
                                    android:layout_width="@dimen/m20dp"
                                    android:layout_height="@dimen/m2dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/m40dp"
                                    android:layout_alignLeft="@id/max_sal_bar"
                                    android:layout_marginLeft="-4dp"
                                    android:background="@color/primary_orange"/>

                                <TextView
                                    android:id="@+id/avg_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/salary_text"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="Avg"
                                    android:textColor="@color/black"
                                    android:textSize="8sp"/>

                                <TextView
                                    android:id="@+id/avg_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/avg_sal_txt"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="40 Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/min_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/min_sal_val"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="Min"
                                    android:textColor="@color/black"
                                    android:textSize="8sp"/>

                                <TextView
                                    android:id="@+id/min_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="30 Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:layout_marginRight="@dimen/m10dp"
                        android:background="@color/end_gradient"/>

                    <TextView
                        android:id="@+id/recommended_streams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:textSize="8sp"
                        android:maxLines="@integer/int1"
                        android:text="streams"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/recommended_exams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:textSize="8sp"
                        android:maxLines="@integer/int1"
                        android:text="Exams"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <com.collegedekho.app.widget.FadeInImageView
                    android:id="@+id/bottom_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="90dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="@dimen/m2dp"
                    android:layout_marginLeft="@dimen/m2dp"
                    android:src="@drawable/default_banner"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:layout_marginRight="@dimen/m10dp"
                        android:layout_marginBottom="@dimen/m4dp">

                        <ImageView
                            android:id="@+id/img_left_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow_left"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:gravity="right"
                            android:paddingTop="@dimen/m18dp"
                            android:text="NOT\nINTERESTED"
                            android:textColor="#DD1f2560"
                            android:textSize="@dimen/m10sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/btn_apply_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_button_orange"
                            android:padding="10dp"
                            android:text="View Details"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/img_rtght_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleX="-1"
                            android:src="@drawable/arrow_left"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:gravity="right"
                            android:paddingTop="@dimen/m18dp"
                            android:text="\nSHORTLISTED"
                            android:textColor="#DD1f2560"
                            android:textSize="@dimen/m10sp"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>