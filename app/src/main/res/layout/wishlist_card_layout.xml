    <android.support.v7.widget.CardView
        android:id="@+id/wish_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/primary_color"
        android:elevation="@dimen/m1dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_orange_border_box">

            <LinearLayout
                android:id="@+id/institute_card_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:padding="@dimen/m4dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toLeftOf="@+id/share"
                        android:text="Institute Name"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="@dimen/m2dp"
                        android:layout_toLeftOf="@+id/share"
                        android:text="Institute description"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m4dp"
                        android:src="@drawable/ic_share"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.collegedekho.app.widget.FadeInImageView
                        android:id="@+id/institute_image"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_marginRight="@dimen/m2dp"
                        android:layout_marginLeft="@dimen/m2dp"
                        android:src="@drawable/default_banner"/>

                    <LinearLayout
                        android:id="@+id/heart_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m30dp"
                        android:layout_marginTop="@dimen/m10dp"
                        android:background="@drawable/heart_drawable"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="6dp">

                        <TextView
                            android:id="@+id/applied_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="235"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="STUDENTS\nAPPLIED"
                            android:textColor="@color/primary_color"
                            android:textSize="6sp"
                            />
                    </LinearLayout>

                    <!--  <ImageView
                          android:id="@+id/btn_info"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_marginRight="-12dp"
                          android:layout_marginTop="@dimen/m10dp"
                          android:src="@drawable/cancel"
                          />-->

