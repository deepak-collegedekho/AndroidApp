<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_reco_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/primary_color"
    android:elevation="@dimen/m1dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="20dp"
    >

            <LinearLayout
                android:id="@+id/institute_card_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:background="@drawable/bg_rounded_orange_border_box">

                <RelativeLayout android:id="@+id/header_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m55dp"
                    android:gravity="center"
                    android:background="@drawable/wish_list_title_blue_bg"
                    android:paddingTop="@dimen/m3dp"
                    android:paddingBottom="@dimen/m3dp"
                    android:paddingRight="@dimen/m10dp"
                    android:paddingLeft="@dimen/m10dp"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toLeftOf="@+id/share"
                        android:text="Institute Name"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginLeft="6dp"
                        android:layout_toLeftOf="@+id/share"
                        android:text="Institute description"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/m4dp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m110dp">

                    <com.collegedekho.app.widget.FadeInImageView
                        android:id="@+id/institute_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/m2dp"
                        android:layout_marginRight="@dimen/m2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_banner"
                        />

                    <TextView
                        android:id="@+id/txt_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_marginBottom="@dimen/m16dp"
                        android:layout_marginLeft="@dimen/m15dp"
                        android:background="@color/primary_color"
                        android:padding="@dimen/m5dp"
                        android:text="CRR"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_marginBottom="@dimen/m16dp"
                        android:layout_toRightOf="@id/txt_rating_text"
                        android:background="@color/primary_color"
                        android:paddingBottom="@dimen/m5dp"
                        android:paddingLeft="@dimen/m30dp"
                        android:paddingRight="@dimen/m2dp"
                        android:paddingTop="@dimen/m5dp"
                        android:text="10"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:id="@+id/likes_layout"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:gravity="center"
                        android:layout_toRightOf="@id/txt_rating_value"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cd_reco_card_like"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/m5dp"
                            android:padding="@dimen/m2dp"/>

                        <TextView
                            android:id="@+id/vote_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/m5dp"
                            android:padding="@dimen/m4dp"
                            android:text="86"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/overlay_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m110dp"
                        android:background="@color/primary_orange_light"
                        android:paddingLeft="@dimen/m20dp"
                        android:paddingTop="@dimen/m6dp"
                        android:visibility="gone"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/application_status_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/wish_list_inner_bg"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/m2dp"
                                android:paddingLeft="@dimen/m10dp"
                                android:paddingRight="@dimen/m10dp"
                                android:paddingTop="@dimen/m2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="APPLICATION STATUS"
                                    android:textColor="@color/primary_color"
                                    android:textSize="@dimen/m10sp"
                                    android:textStyle="bold"/>

                                <TextView android:id="@+id/txt_interested"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Interested"
                                    android:textColor="@color/light_blue"
                                    android:textSize="@dimen/m10sp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/exam_score_layout"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/wish_list_inner_bg"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/m4dp"
                                android:paddingLeft="@dimen/m10dp"
                                android:paddingRight="@dimen/m10dp"
                                android:paddingTop="@dimen/m2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EXAM SCORE ACCEPTED"
                                    android:textColor="@color/primary_color"
                                    android:textSize="@dimen/m10sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_exam_accepted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="@integer/int4"
                                    android:text="JEE"
                                    android:textColor="@color/light_blue"
                                    android:textSize="@dimen/m10sp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:id="@+id/heart_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/m20dp"
                        android:layout_marginTop="@dimen/m10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="6dp">

                        <TextView
                            android:id="@+id/applied_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="235"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="STUDENTS\nAPPLIED"
                            android:textColor="@color/primary_color"
                            android:textSize="6sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_last_application_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="-8dp"
                        android:layout_toLeftOf="@id/heart_layout"
                        android:background="@color/primary_color"
                        android:paddingBottom="@dimen/m5dp"
                        android:paddingLeft="@dimen/m2dp"
                        android:paddingRight="@dimen/m10dp"
                        android:paddingTop="@dimen/m4dp"
                        android:text="LAST APPLICATION"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:id="@+id/clock_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/institute_image"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="@dimen/m20dp"
                        android:layout_marginTop="@dimen/m10dp"
                        android:background="@drawable/alarm"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/m2dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/txt_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/primary_color"
                            android:textSize="6sp"
                            />

                        <TextView
                            android:id="@+id/txt_month_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/facility_toast"
                        style="@style/AppTheme.BlueButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/m10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:alpha="0"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/facilities_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/m2dp">

                        <TextView
                            android:id="@+id/facilities_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="FACILITIES"
                            android:gravity="center"
                            android:textColor="@color/primary_color"
                            android:textSize="12sp"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/facilities_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/m33dp"
                            android:layout_below="@id/facilities_text"
                            android:layout_marginLeft="@dimen/m10dp"
                            android:layout_marginRight="@dimen/m10dp"
                            android:layout_marginTop="@dimen/m2dp"/>


                        <RelativeLayout
                            android:id="@+id/see_all_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/facilities_text"
                            android:layout_marginRight="@dimen/m10dp">

                            <TextView
                                android:id="@+id/see_all_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SEE ALL\nFACILITIES"
                                android:textColor="@color/primary_color"
                                android:textSize="6sp"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/see_all_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/see_all_text"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/m1dp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/facilities_recycler"
                            android:layout_marginLeft="@dimen/m10dp"
                            android:layout_marginRight="@dimen/m10dp"
                            android:layout_marginTop="@dimen/m2dp"
                            android:background="@color/end_gradient"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/m7dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|bottom"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/placement_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/placement_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    app:srcCompat="@drawable/ic_wishlist_placement"
                                    />

                                <TextView
                                    android:id="@+id/placement_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/placement_image"
                                    android:layout_centerHorizontal="true"
                                    android:text="80%"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/m5dp"
                                    android:textSize="@dimen/m13sp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/placement_percentage"
                                    android:layout_centerHorizontal="true"
                                    android:text="Placement"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/m11sp"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/salaries_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/fees_range_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"/>

                                    <TextView
                                        android:id="@+id/fees_range_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/fees_range_image"
                                        android:layout_centerHorizontal="true"
                                        android:text="3-5 lac"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="@dimen/m5dp"
                                        android:textSize="@dimen/m13sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/fees_range_text"
                                        android:layout_centerHorizontal="true"
                                        android:text="Fees Range"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/m11sp"/>
                            </RelativeLayout>
                        </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/salary_layout"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/m1dp">

                                <TextView
                                    android:id="@+id/salary_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="SALARIES"
                                    android:textColor="@color/primary_color"
                                    android:textSize="12sp"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/salary_text">

                                <TextView
                                    android:id="@+id/max_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:text="Max"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:id="@+id/max_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/max_sal_txt"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:text="-- Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    />

                                <View
                                    android:id="@+id/max_sal_bar"
                                    android:layout_width="@dimen/m8dp"
                                    android:layout_height="@dimen/m50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/max_sal_val"
                                    android:background="@color/primary_color"/>

                                <View
                                    android:id="@+id/min_sal_bar"
                                    android:layout_width="@dimen/m8dp"
                                    android:layout_height="@dimen/m4dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m4dp"
                                    android:layout_toRightOf="@id/max_sal_bar"
                                    android:background="@color/light_blue"/>

                                <View
                                    android:id="@+id/avg_sal_mark"
                                    android:layout_width="@dimen/m20dp"
                                    android:layout_height="@dimen/m2dp"
                                    android:layout_alignLeft="@id/max_sal_bar"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/m25dp"
                                    android:layout_marginLeft="-4dp"
                                    android:background="@color/primary_orange"/>

                                <TextView
                                    android:id="@+id/avg_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="Avg"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:id="@+id/avg_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/avg_sal_txt"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="-- Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/min_sal_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/min_sal_val"
                                    android:layout_below="@id/avg_sal_val"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="Min"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:id="@+id/min_sal_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/m10dp"
                                    android:layout_toRightOf="@id/min_sal_bar"
                                    android:text="-- Lac"
                                    android:textColor="@color/primary_color"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    />
                                    </RelativeLayout>
                            </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:layout_marginRight="@dimen/m10dp"
                        android:layout_marginTop="@dimen/m5dp"
                        android:background="@color/end_gradient"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:layout_marginRight="@dimen/m10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/recommended_streams"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@color/primary_orange_opacity"
                            android:maxLines="@integer/int1"
                            android:paddingTop="@dimen/m5dp"
                            android:paddingBottom="@dimen/m5dp"
                            android:paddingLeft="@dimen/m5dp"
                            android:text="streams"
                            android:textColor="@color/primary_color"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/recommended_exams"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@color/primary_orange_opacity"
                            android:maxLines="@integer/int1"
                            android:paddingTop="@dimen/m5dp"
                            android:paddingBottom="@dimen/m5dp"
                            android:paddingLeft="@dimen/m5dp"
                            android:text="Exams"
                            android:textColor="@color/primary_color"
                            android:textSize="13sp"/>
                    </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/m4dp"
                    android:paddingBottom="@dimen/m4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_call_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_blue"
                        android:drawablePadding="@dimen/m5dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="CALL"
                        android:gravity="center"
                        android:drawableLeft="@drawable/call"
                        android:layout_marginRight="@dimen/m8dp"
                        android:textSize="@dimen/m13sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/btn_apply_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_orange"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="APPLY NOW"
                        android:gravity="center"
                        android:textSize="@dimen/m13sp"
                        android:layout_marginLeft="@dimen/m8dp"
                        android:textColor="@color/white"/>

                    </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>