<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m5dp"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="@dimen/m2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/m5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/profile_exam_name"
            android:layout_width="0dp"
            android:layout_weight=".48"
            android:maxLines="4"
            android:gravity="center|left"
            android:ellipsize="end"
            android:paddingTop="@dimen/m2dp"
            android:paddingBottom="@dimen/m2dp"
            android:layout_height="match_parent"
            android:text="exam" />

        <EditText
            android:id="@+id/profile_exam_score"
            android:layout_width="0dp"
            android:layout_weight=".18"
            android:background="@color/wallet_foreground_light"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:hint="Score" />

        <com.collegedekho.app.widget.spinner.MaterialSpinner
            android:id="@+id/profile_exam_status"
            android:layout_width="0dp"
            android:layout_weight=".34"
            android:layout_marginLeft="@dimen/m4dp"
            android:layout_height="match_parent"/>



    </LinearLayout>
</android.support.v7.widget.CardView>