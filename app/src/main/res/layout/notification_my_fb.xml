<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="left"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    >
    <ImageView
        android:id="@+id/notification_fb_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="11dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/notification_fb_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/m8dp"
        android:layout_marginEnd="@dimen/m8dp"
        android:text="11:23 AM"
        android:gravity="center_vertical"
        android:textSize="@dimen/m12sp"
        android:textColor="@color/textPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/notification_fb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/m8dp"
        android:layout_marginEnd="@dimen/m8dp"
        android:text="Example Title"
        android:maxLines="2"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/m16sp"
        android:layout_toRightOf="@id/notification_fb_icon"
        android:layout_toEndOf="@id/notification_fb_icon"
        android:layout_toLeftOf="@id/notification_fb_time"
        android:layout_toStartOf="@id/notification_fb_time"
        android:ellipsize="end"
        android:gravity="center_vertical|top"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        />
    <TextView
        android:id="@+id/notification_fb_desc"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/m8dp"
        android:layout_marginEnd="@dimen/m8dp"
        android:text="Example Description"
        android:maxLines="1"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/m14sp"
        android:layout_marginTop="@dimen/activity_vertical_margin_tiny"
        android:layout_toRightOf="@id/notification_fb_icon"
        android:layout_toEndOf="@id/notification_fb_icon"
        android:layout_toLeftOf="@id/notification_fb_time"
        android:layout_toStartOf="@id/notification_fb_time"
        android:layout_below="@id/notification_fb_title"
        />
</RelativeLayout>