<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_like_layout"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">

     <TextView
        android:id="@+id/card_item_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4300"
        android:visibility="visible"
        android:layout_marginTop="3dp"
        android:textColor="@color/arrow_color"
        android:gravity="center"
        android:textSize="9sp"/>
    <ImageView
        android:id="@+id/card_item_button_like"
        android:layout_width="@dimen/m25dp"
        android:layout_height="@dimen/m25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_like"
        android:visibility="visible"
        android:tint="@color/subheading_color"/>
    <ProgressBar
        android:id="@+id/card_item_like_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/m2dp"
        android:layout_marginTop="@dimen/m3dp"
        style="@android:style/Widget.ProgressBar.Small"/>

</LinearLayout>