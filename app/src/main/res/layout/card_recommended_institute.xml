<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_recommended_institute"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    >
    <RelativeLayout
        android:id="@+id/card_recommended_institute_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/card_recommended_institute_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/card_bg"
            tools:text="International College of Engineering"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/m18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            />
        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/card_recommended_institute_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/card_recommended_institute_title"
            android:src="@drawable/default_banner"
            android:contentDescription="instituteImage"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/like_textview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:tint="@color/like_green_selected"
                android:visibility="visible"/>

        </FrameLayout>
        <RelativeLayout
            android:id="@+id/card_recommended_institute_info_container"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignBottom="@id/card_recommended_institute_image"
            android:paddingRight="@dimen/activity_horizontal_margin_small"
            android:paddingLeft="@dimen/activity_horizontal_margin_small"
            android:paddingBottom="@dimen/activity_vertical_margin_small"
            android:paddingTop="@dimen/activity_vertical_margin_small"
            android:background="@drawable/bg_recommended_text_gradient"
            >
            <TextView
                android:id="@+id/card_recommended_geolocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_geolocation"
                android:textColor="@color/white"
                android:text="Pune, Maharastra"
                android:textSize="@dimen/m24sp"
                android:textStyle="normal"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/card_recommended_streams_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Streams :"
                android:textSize="@dimen/m24sp"
                android:textStyle="normal"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:layout_below="@id/card_recommended_geolocation"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                />

            <LinearLayout
                android:id="@+id/card_recommended_streams_container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@id/card_recommended_streams_label"
                android:layout_below="@id/card_recommended_geolocation"
                android:layout_alignTop="@id/card_recommended_streams_label"
                android:layout_marginTop="@dimen/m2dp"
                android:layout_marginLeft="@dimen/m5dp"
                >
                <!--<TextView
                    android:id="@+id/card_recommended_streams_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Engineering"
                    android:textSize="@dimen/m22sp"
                    />
                <TextView
                    android:id="@+id/card_recommended_streams_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Engineering"
                    android:textSize="@dimen/m22sp"
                    />-->
            </LinearLayout>

            <TextView
                android:id="@+id/card_recommended_institute_detail"
                style="@style/AppTheme.GreyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="View Details"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
