<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_recommended_institute"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/card_recommended_institute_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/card_recommended_institute_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/card_bg"
            tools:text="International College of Engineering"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/m18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            />

        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/card_recommended_institute_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/card_recommended_institute_title"
            android:src="@drawable/default_banner"
            android:contentDescription="instituteImage"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/like_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKE"
                android:textSize="30sp"
                android:textColor="@color/like_green_selected"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="left"/>

        </FrameLayout>
        <RelativeLayout
            android:id="@+id/card_recommended_institute_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_recommended_institute_image"
            android:paddingRight="@dimen/activity_horizontal_margin_small"
            android:paddingLeft="@dimen/activity_horizontal_margin_small"
            android:paddingBottom="@dimen/activity_vertical_margin_small"
            android:paddingTop="@dimen/activity_vertical_margin_small"
            android:background="@drawable/bg_recommended_text_gradient"
            >
            <TextView
                android:id="@+id/card_recommended_geolocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_geolocation"
                android:textColor="@color/white"
                android:text="Pune, Maharastra"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:id="@+id/card_recommended_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_handmade_thumb"
                android:textColor="@color/white"
                android:text="4567"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:id="@+id/card_recommended_courses_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_recommended_geolocation"
                android:textColor="@color/white"
                android:text="9 Courses"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:paddingLeft="@dimen/m3dp"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:id="@+id/card_recommended_placement_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="56"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:layout_below="@id/card_recommended_like_count"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/m3dp"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:id="@+id/card_recommended_placement_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_percentage"
                android:textColor="@color/white"
                android:text="Placement"
                android:textSize="@dimen/m12sp"
                android:textStyle="normal"
                android:layout_toLeftOf="@id/card_recommended_placement_value"
                android:layout_alignBottom="@id/card_recommended_placement_value"
                android:fontFamily="sans-serif-light"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
