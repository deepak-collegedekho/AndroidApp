<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/def_feed_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_bg"
    app:cardElevation="@dimen/m3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="@dimen/m10dp"
    android:layout_marginBottom="@dimen/m10dp"
    android:layout_marginLeft="@dimen/m8dp"
    android:layout_marginRight="@dimen/m8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/m13dp"
        android:paddingBottom="@dimen/m13dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
            android:layout_marginRight="@dimen/activity_horizontal_margin_small"
            >
            <com.collegedekho.app.widget.FadeInImageView
                android:id="@+id/def_feed_icon"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/college_logo"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginRight="@dimen/activity_horizontal_margin_small"
                />
            <TextView
                android:id="@+id/def_feed_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="@integer/int3"
                android:textSize="@dimen/m16sp"
                android:text="My name is Anthony Gonzalviz"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/def_feed_icon"
                android:layout_toEndOf="@id/def_feed_icon"
                android:textColor="@color/heading_color"
                android:fontFamily="sans-serif-medium"
                android:layout_alignTop="@id/def_feed_icon"
                />
            <TextView
                android:id="@+id/def_feed_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="@integer/int1"
                android:textSize="@dimen/m11sp"
                android:text="November 08, 2016 11: 52 PM"
                android:layout_toRightOf="@id/def_feed_icon"
                android:layout_toEndOf="@id/def_feed_icon"
                android:layout_below="@id/def_feed_title"
                android:layout_marginTop="@dimen/activity_horizontal_margin_smaller"
                android:layout_marginBottom="@dimen/activity_horizontal_margin_smaller"
                android:textColor="@color/text_light_grey"
                android:fontFamily="sans-serif-light"
                />
            <ImageView
                android:id="@+id/def_feed_share_icon"
                android:layout_height="@dimen/m20dp"
                android:layout_width="@dimen/m20dp"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/def_feed_title"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin_smaller"
                app:srcCompat="@drawable/ic_share_enclosed"
                />
            <TextView
                android:id="@+id/def_feed_share"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="@integer/int1"
                android:textSize="@dimen/m14sp"
                android:text="Share"
                android:layout_below="@id/def_feed_title"
                android:layout_toLeftOf="@id/def_feed_share_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin_tiny"
                android:layout_marginBottom="@dimen/activity_horizontal_margin_smaller"
                android:layout_marginRight="@dimen/activity_horizontal_margin_smaller"
                android:textColor="@color/text_light_grey"
                android:fontFamily="sans-serif-light"
                android:elevation="@dimen/m10dp"
                />
        </RelativeLayout>
        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/def_feed_image"
            android:layout_height="130dp"
            android:layout_width="match_parent"
            android:src="@drawable/college_logo"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin_smaller"
            />
        <TextView
            android:id="@+id/def_feed_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLines="@integer/int5"
            android:textSize="@dimen/m14sp"
            android:text="My name is Anthony Gonzalviz\n My name\n is Anthony Gonzalviz My name is Anthony Gonzalviz v My name is Anthony Gonzalviz My name is Anthony Gonzalviz My name is Anthony Gonzalviz My name is Anthdjwq 222"
            android:layout_marginTop="@dimen/activity_horizontal_margin_smaller"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
            android:layout_marginRight="@dimen/activity_horizontal_margin_small"
            android:textColor="@color/subheading_color"
            android:fontFamily="sans-serif-light"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/m1dp"
            android:nestedScrollingEnabled="true"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>