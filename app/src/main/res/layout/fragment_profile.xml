<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/profile_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.profileTextView"
        android:text="PROFILE"
        android:paddingBottom="@dimen/m10dp"
        android:paddingTop="@dimen/m10dp"
        android:textSize="16sp"
        android:background="@color/primary_color"
        android:paddingLeft="@dimen/m20dp"
        android:textColor="@color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/m15dp"
        android:paddingRight="@dimen/m15dp"
        android:background="@color/primary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="@dimen/m40dp"
                app:srcCompat="@drawable/ic_profile_info"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="6.2"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_info_til"
                    style="@style/AppTheme.profileTextView"
                    android:text="INFO"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/profile_info_phone"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_info_til"
                    android:text="+91-9650672665"/>

                <TextView
                    android:id="@+id/profile_info_email"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_info_phone"
                    android:text="sainisuresh101@gmail.com"
                    />


            </RelativeLayout>
            <ImageView
                android:id="@+id/profile_edit_btn"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:tint="@color/light_blue"
                android:visibility="visible"
                android:padding="@dimen/m10dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_edit"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

          <ProgressBar
              android:id="@+id/profile_info_progress"
              android:layout_width="0dp"
              android:layout_weight=".9"
              android:layout_height="wrap_content"
              android:layerType="software"
              android:progress="20"
              android:background="@drawable/bg_dotted_line"
              android:progressTint="@color/light_blue"
              style="?android:attr/progressBarStyleHorizontal" />

            <ImageView
                android:id="@+id/profile_show_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:tint="@color/light_blue"
                app:srcCompat="@drawable/ic_add_inline_white_vector"/>

        </LinearLayout>

        <LinearLayout
              android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="@dimen/m50dp"
                app:srcCompat="@drawable/ic_profile_education"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_education_til"
                    style="@style/AppTheme.profileTextView"
                    android:text="EDUCATION"
                    android:paddingBottom="@dimen/m1dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/profile_education_degree"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_education_til"
                    android:text="B.tech"/>

                <TextView
                    android:id="@+id/profile_education_year"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_education_degree"
                    android:text="4th year"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:tint="@color/light_blue"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_edit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/profile_education_progress"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:progress="60"
                android:background="@drawable/bg_dotted_line"
                android:progressTint="@color/light_blue"
                style="?android:attr/progressBarStyleHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:tint="@color/light_blue"
                app:srcCompat="@drawable/ic_add_inline_white_vector"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="@dimen/m50dp"
                app:srcCompat="@drawable/ic_profile_preferences"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_preferences_til"
                    style="@style/AppTheme.profileTextView"
                    android:text="PREFERENCES"
                    android:paddingBottom="@dimen/m1dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/profile_preferences_degree"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_preferences_til"
                    android:text="MBA"/>

                <TextView
                    android:id="@+id/profile_preferences_location"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_preferences_degree"
                    android:text="Delhi"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:tint="@color/light_blue"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_edit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/profile_preferences_progress"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:progress="40"
                android:background="@drawable/bg_dotted_line"
                android:progressTint="@color/light_blue"
                style="?android:attr/progressBarStyleHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:tint="@color/light_blue"
                app:srcCompat="@drawable/ic_add_inline_white_vector"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="@dimen/m50dp"
                app:srcCompat="@drawable/ic_profile_exams"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_exams_til"
                    style="@style/AppTheme.profileTextView"
                    android:text="EXAMS"
                    android:paddingBottom="@dimen/m1dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/profile_exams_name"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_exams_til"
                    android:text="MAT"/>

                <TextView
                    android:id="@+id/profile_exams_specialization"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_exams_name"
                    android:text="Finance"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:tint="@color/light_blue"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_edit"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/profile_exams_progress"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:progress="50"
                android:background="@drawable/bg_dotted_line"
                android:progressTint="@color/light_blue"
                style="?android:attr/progressBarStyleHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:tint="@color/light_blue"
                app:srcCompat="@drawable/ic_add_inline_white_vector"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="@dimen/m50dp"
                app:srcCompat="@drawable/ic_profile_other"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_other_til"
                    style="@style/AppTheme.profileTextView"
                    android:text="OTHER"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/profile_father_name"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_other_til"
                    android:text="Father :"/>

                <TextView
                    android:id="@+id/profile_mother_name"
                    style="@style/AppTheme.profileTextView"
                    android:layout_below="@id/profile_father_name"
                    android:text="Mother :"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:tint="@color/light_blue"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_edit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/profile_other_progress"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:progress="30"
                android:background="@drawable/bg_dotted_line"
                android:progressTint="@color/light_blue"
                style="?android:attr/progressBarStyleHorizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:tint="@color/light_blue"
                app:srcCompat="@drawable/ic_add_inline_white_vector"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <include
        android:id="@+id/include_edit_image_layout"
        layout="@layout/layout_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Suresh"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>

</LinearLayout>

</FrameLayout>