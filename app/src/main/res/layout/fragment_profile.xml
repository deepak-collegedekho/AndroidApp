<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/profile_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.profileTextView"
            android:text="PROFILE"
            android:paddingBottom="@dimen/m10dp"
            android:paddingTop="@dimen/m10dp"
            android:textSize="16sp"
            android:background="@color/primary_color"
            android:paddingLeft="@dimen/m20dp"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/m12dp"
            android:paddingRight="@dimen/m12dp"
            android:background="@color/primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="@dimen/m40dp"
                    app:srcCompat="@drawable/ic_profile_info"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="7.8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_info_til"
                        style="@style/AppTheme.profileTextView"
                        android:text="INFO"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_info_til"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Phone"/>

                            <TextView
                                android:id="@+id/profile_info_phone"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Email"/>

                            <TextView
                                android:id="@+id/profile_info_email"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/profile_more_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="City"/>

                                <TextView
                                    android:id="@+id/profile_info_city"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="State"/>

                                <TextView
                                    android:id="@+id/profile_info_state"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Mother Tongue"/>

                                <TextView
                                    android:id="@+id/profile_info_mother_tongue"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Category"/>

                                <TextView
                                    android:id="@+id/profile_info_category"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

              <ProgressBar
                  android:id="@+id/profile_info_progress"
                  android:layout_width="0dp"
                  android:layout_weight=".9"
                  android:layout_height="wrap_content"
                  android:layerType="software"
                  android:progress="20"
                  android:background="@drawable/bg_dotted_line"
                  android:progressTint="@color/light_blue"
                  style="?android:attr/progressBarStyleHorizontal" />

                <ImageView
                    android:id="@+id/profile_show_more_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tint="@color/light_blue"
                    android:padding="@dimen/m2dp"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>

            <LinearLayout
                  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="@dimen/m50dp"
                    app:srcCompat="@drawable/ic_profile_education"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="7.8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_education_til"
                        style="@style/AppTheme.profileTextView"
                        android:text="EDUCATION"
                        android:paddingBottom="@dimen/m1dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />

>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_education_til"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Degree"/>

                            <TextView
                                android:id="@+id/profile_education_degree"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="passing Year"/>

                            <TextView
                                android:id="@+id/profile_education_year"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profile_more_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Stream"/>

                                <TextView
                                    android:id="@+id/profile_education_stream"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:layout_weight=".44"
                                    android:text="Specialization"/>

                                <TextView
                                    android:id="@+id/profile_education_specialization"
                                    android:layout_weight=".56"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="@string/SCORE"/>

                                <TextView
                                    android:id="@+id/profile_education_score"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Mode"/>

                                <TextView
                                    android:id="@+id/profile_education_mode"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/profile_education_progress"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:progress="60"
                    android:max="100"
                    android:background="@drawable/bg_dotted_line"
                    android:progressTint="@color/light_blue"
                    style="?android:attr/progressBarStyleHorizontal" />

                <ImageView
                    android:id="@+id/profile_show_more_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tint="@color/light_blue"
                    android:padding="@dimen/m2dp"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="@dimen/m50dp"
                    app:srcCompat="@drawable/ic_profile_preferences"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="7.8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_preferences_til"
                        style="@style/AppTheme.profileTextView"
                        android:text="PREFERENCES"
                        android:paddingBottom="@dimen/m1dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_preferences_til"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Degrees"/>

                            <TextView
                                android:id="@+id/profile_preferences_degree"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Cities"/>

                            <TextView
                                android:id="@+id/profile_preferences_location"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/profile_more_preferences"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Stream"/>

                                <TextView
                                    android:id="@+id/profile_preferences_stream"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:layout_weight=".44"
                                    android:text="Specialization"/>

                                <TextView
                                    android:id="@+id/profile_preferences_specialization"
                                    android:layout_weight=".56"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Year"/>

                                <TextView
                                    android:id="@+id/profile_preferences_year"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Mode"/>

                                <TextView
                                    android:id="@+id/profile_preferences_mode"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Fee Range"/>

                                <TextView
                                    android:id="@+id/profile_preferences_fee_range"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/profile_preferences_loan_required_layout"
                                style="@style/AppTheme.profileInfoTLayout">

                                <TextView
                                    style="@style/AppTheme.profileTextViewTitle"
                                    android:text="Loan Amount"/>

                                <TextView
                                    android:id="@+id/profile_preferences_loan_amount"
                                    style="@style/AppTheme.profileInfoTextView"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/profile_preferences_progress"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:progress="40"
                    android:background="@drawable/bg_dotted_line"
                    android:progressTint="@color/light_blue"
                    style="?android:attr/progressBarStyleHorizontal" />

                <ImageView
                    android:id="@+id/profile_show_more_preferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tint="@color/light_blue"
                    android:padding="@dimen/m2dp"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="@dimen/m50dp"
                    app:srcCompat="@drawable/ic_profile_exams"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="7.8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_exams_til"
                        style="@style/AppTheme.profileTextView"
                        android:text="EXAMS"
                        android:paddingBottom="@dimen/m1dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:layout_below="@id/profile_exams_til"
                        style="@style/AppTheme.profileInfoTLayout">

                        <TextView
                            style="@style/AppTheme.profileTextViewTitle"
                            android:text="Exams"/>

                        <TextView
                            android:id="@+id/profile_exams_name"
                            style="@style/AppTheme.profileInfoTextView"/>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/profile_exams_progress"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:progress="96"
                    android:background="@drawable/bg_dotted_line"
                    android:progressTint="@color/light_blue"
                    style="?android:attr/progressBarStyleHorizontal" />

                <ImageView
                    android:id="@+id/profile_show_more_exams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tint="@color/light_blue"
                    android:padding="@dimen/m2dp"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="@dimen/m50dp"
                    app:srcCompat="@drawable/ic_profile_other"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="7.8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_other_til"
                        style="@style/AppTheme.profileTextView"
                        android:text="OTHER"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_other_til"
                        android:orientation="vertical">
                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Father"/>

                            <TextView
                                android:id="@+id/profile_father_name"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                        <LinearLayout
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Mother"/>

                            <TextView
                                android:id="@+id/profile_mother_name"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/profile_more_other_info"
                            android:visibility="gone"
                            style="@style/AppTheme.profileInfoTLayout">

                            <TextView
                                style="@style/AppTheme.profileTextViewTitle"
                                android:text="Coaching Institute"/>

                            <TextView
                                android:id="@+id/profile_coaching_institute_name"
                                style="@style/AppTheme.profileInfoTextView"/>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/profile_other_progress"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:progress="30"
                    android:background="@drawable/bg_dotted_line"
                    android:progressTint="@color/light_blue"
                    style="?android:attr/progressBarStyleHorizontal" />

                <ImageView
                    android:id="@+id/profile_show_more_other_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tint="@color/light_blue"
                    android:padding="@dimen/m2dp"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".45"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_edit_image_layout"
                    layout="@layout/layout_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".55"
                android:paddingLeft="@dimen/m5dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image_update_btn"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:tint="@color/light_blue"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/m10dp"
                    android:padding="@dimen/m5dp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/ic_edit_image"/>

                <TextView
                    android:id="@+id/profile_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ANONYMOUS_USER"
                    android:gravity="left|top"
                    android:paddingLeft="@dimen/m5dp"
                    android:paddingRight="@dimen/m5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:paddingRight="@dimen/m10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_edit_btn"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:tint="@color/primary_color"
                android:visibility="visible"
                android:padding="@dimen/m10dp"
                android:layout_gravity="right|top"
                android:background="@drawable/bg_edit_profile_icon"
                app:srcCompat="@drawable/ic_edit_profile"/>
        </LinearLayout>


    </FrameLayout>
</ScrollView>
