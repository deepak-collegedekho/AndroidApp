<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:weightSum="1">

                <TextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:gravity="center|left"
                    android:text="Name"/>

                 <EditText
                     android:id="@+id/profile_name"
                     android:layout_width="0dp"
                     android:layout_height="35dp"
                     android:maxLines="1"
                     android:inputType="textNoSuggestions"
                     android:background="@drawable/round_box"
                     android:layout_weight=".6"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center|left"
                android:text="Email"/>

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:background="@drawable/round_box"
                android:layout_weight=".6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center|left"
                android:text="Phone"/>

            <EditText
                android:id="@+id/profile_contact"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="10"
                android:background="@drawable/round_box"
                android:layout_weight=".6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center|left"
                android:text="Streams"/>

            <TextView
                style="@style/AppTheme.TextHomeSubHead.Medium"
                android:id="@+id/profile_streams"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center|left"
                android:text="Level"/>

            <TextView
                style="@style/AppTheme.TextHomeSubHead.Medium"
                android:id="@+id/profile_level"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"/>
        </LinearLayout>

            <TextView
                android:id="@+id/profile_update"
                style="@style/AppTheme.BlueButton"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@id/label4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/course_label_horizontal_margin"
                android:layout_marginTop="50dp"
                android:text="Submit"/>
        </LinearLayout>
    </ScrollView>