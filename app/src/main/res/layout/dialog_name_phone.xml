<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent">
    <LinearLayout  android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_name_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m8dp"
            android:layout_marginLeft="@dimen/m25dp"
            android:layout_marginRight="@dimen/m35dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_name"
                style="@style/AppTheme.EditText"
                android:inputType="textCapWords"
                android:maxLength="35"
                android:hint="Name"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_phone_til"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m8dp"
            android:layout_marginLeft="@dimen/m25dp"
            android:layout_marginRight="@dimen/m35dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_phone"
                style="@style/AppTheme.EditText"
                android:hint="Phone"
                android:maxLines="1"
                android:inputType="phone"
                android:digits="1234567890"
                android:maxLength="10" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            style="@style/AppTheme.BlueButton"
            android:text="OK"
            android:layout_marginTop="@dimen/m25dp"
            android:layout_marginBottom="@dimen/m25dp"
            android:id="@+id/name_submit"
            android:gravity="center"
            android:layout_marginLeft="@dimen/m25dp"
            android:layout_marginRight="@dimen/m25dp"
            android:background="@color/primary_color_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>