<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/m30dp"
    android:paddingRight="@dimen/m30dp"
    android:background="@drawable/bg_uni1">


    <EditText
       android:id="@+id/name"
       style="@style/AppTheme.EditText"
       android:layout_centerHorizontal="true"
       android:inputType="textCapWords"
       android:maxLength="25"
       android:hint="Name"
    />
    <EditText
        android:id="@+id/phone"
        style="@style/AppTheme.EditText"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:hint="Phone"
        android:inputType="phone"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/email"
        style="@style/AppTheme.EditText"
        android:layout_below="@id/phone"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/password"
        style="@style/AppTheme.EditText"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:visibility="gone"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/signIn_button"
        style="@style/AppTheme.BlueButton"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/m30dp"
        android:layout_centerHorizontal="true"
        android:text="SIGN IN"
        />

    <TextView
        style="@style/AppTheme.TextView.BlackTextView"
        android:id="@+id/forgotPassword"
        android:layout_below="@id/signIn_button"
        android:layout_marginLeft="@dimen/m45dp"
        android:layout_marginRight="@dimen/m20dp"
        android:visibility="gone"
        android:text="Forgot Your Pasword ?"
        />
    <TextView
        style="@style/AppTheme.TextView.WhiteTextView"
        android:id="@+id/SignUp_button"
        android:layout_below="@id/signIn_button"
        android:layout_toRightOf="@id/forgotPassword"
        android:gravity="center"
        android:layout_marginTop="@dimen/m30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/material_blue_500"
        android:text="SignUp"
        android:visibility="gone"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <View
        style="@style/AppTheme.Divider2"
        android:layout_below="@id/forgotPassword"
        android:id="@+id/divider_login"
        android:visibility="gone"/>

    <TextView
        style="@style/AppTheme.TextView.BlackTextView"
        android:layout_below="@id/SignUp_button"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="OR"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SignUp_button"
        android:layout_marginTop="@dimen/m60dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m20dp"
                android:paddingBottom="@dimen/m10dp"
                android:paddingTop="@dimen/m10dp"
                android:textSize="16sp"/>

    </LinearLayout>
</RelativeLayout>