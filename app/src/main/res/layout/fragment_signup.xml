<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/m30dp"
    android:paddingRight="@dimen/m30dp"
   >


    <EditText
        android:id="@+id/name"
        style="@style/AppTheme.EditText"
        android:layout_centerHorizontal="true"
        android:inputType="textCapWords"
        android:maxLength="35"
        android:layout_marginTop="@dimen/m50dp"
        android:background="@color/wallet_dim_foreground_holo_dark"
        android:hint="Name"
        />
    <EditText
        android:id="@+id/phone"
        style="@style/AppTheme.EditText"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:background="@color/wallet_dim_foreground_holo_dark"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="10"
        />

    <EditText
    android:id="@+id/email"
    style="@style/AppTheme.EditText"
    android:layout_below="@id/phone"
    android:background="@color/wallet_dim_foreground_holo_dark"
    android:layout_centerHorizontal="true"
    android:inputType="textEmailAddress"
    android:hint="Email"
    />

    <EditText
        android:id="@+id/password"
        style="@style/AppTheme.EditText"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:background="@color/wallet_dim_foreground_holo_dark"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/signUp_button"
        style="@style/AppTheme.BlueButton"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/m30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="?attr/colorPrimary"
        android:text="SIGN UP"
        />



</RelativeLayout>