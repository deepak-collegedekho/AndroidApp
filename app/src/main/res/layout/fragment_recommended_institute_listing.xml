<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/recommended_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended Colleges"
        android:textSize="14sp"
        android:background="@color/primary_color_dark"
        android:padding="10dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_below="@id/recommended_page_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <RelativeLayout
            android:id="@+id/recommended_page_instuctions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="@dimen/m5dp"
            android:background="@color/bg_divider"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:id="@+id/recommended_tute_image_not_interested_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_redo"
                    android:rotation="180"
                    android:scaleY="-1"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/recommended_tute_image_not_interested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Not Interested"
                    android:layout_below="@id/recommended_tute_image_not_interested_image"
                    android:layout_marginTop="@dimen/m5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/recommended_tute_image_not_decided_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_redo"
                    android:rotation="270"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/recommended_tute_image_not_decided"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Decide Later"
                    android:layout_below="@id/recommended_tute_image_not_decided_image"
                    android:layout_marginTop="@dimen/m5dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/recommended_tute_image_shortlisted_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_redo"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/recommended_tute_image_shortlisted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Shortlist"
                    android:layout_below="@id/recommended_tute_image_shortlisted_image"
                    android:layout_marginTop="@dimen/m5dp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <com.collegedekho.app.display.swipableList.view.CardContainer
            android:id="@+id/fragment_recommended_institute_cards_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:translationZ="@dimen/m5dp"
            />

        <include layout="@layout/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
    <TextView
        android:id="@+id/fragment_recommended_institute_undecided_count"
        style="@style/AppTheme.BlackBorderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undecided Count - ..."
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="bottom|center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_small"
        android:textSize="@dimen/m14sp"
        android:fontFamily="sans-serif-light"
        />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/recommended_tute_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:importantForAccessibility="no"
        >
        <ImageView
            android:id="@+id/recommended_tute_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:contentDescription="@string/profile_tute_description"
            android:src="@drawable/ic_recommended_tute"
            />
    </FrameLayout>
</RelativeLayout>
