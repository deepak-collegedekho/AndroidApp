<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/recommended_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended Colleges"
        android:textSize="14sp"
        android:background="@color/primary_color_dark"
        android:padding="10dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_below="@id/recommended_page_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >


    <com.collegedekho.app.display.swipableList.view.CardContainer
        android:id="@+id/layoutview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>


        <include layout="@layout/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
    <TextView
        android:id="@+id/fragment_recommended_institute_undecided_count"
        style="@style/AppTheme.BlackBorderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undecided Count - ..."
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="bottom|center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_small"
        android:textSize="@dimen/m14sp"
        android:fontFamily="sans-serif-light"
        />

    </LinearLayout>
</RelativeLayout>
