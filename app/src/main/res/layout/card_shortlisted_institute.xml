<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.StreamsCardView">

    <LinearLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical"
        >
        <com.collegedekho.app.widget.FadeInImageView
            android:id="@+id/shortlisted_institute_image"
            style="@style/AppTheme.ImageView.FadeInImage"
            android:layout_height="0dp"
            android:layout_weight=".8"
            />

        <TextView
            android:id="@+id/shortlisted_institute_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Institute Name"
            android:textSize="14sp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>