<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_profile_image"
        android:id="@+id/include_edit_image_layout"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/m30dp"
        android:paddingRight="@dimen/m30dp"
        android:layout_below="@id/include_edit_image_layout"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_edit_name_til"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m35dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/profile_edit_name"
                style="@style/AppTheme.EditText.bg_holo_dark"
                android:inputType="textCapWords"
                android:maxLength="35"
                android:hint="Name"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_edit_phone_til"
            android:layout_width="match_parent"
            android:layout_below="@id/profile_edit_name_til"
            android:layout_marginTop="@dimen/m20dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/profile_edit_phone"
                style="@style/AppTheme.EditText.bg_holo_dark"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="10"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_edit_email_til"
            android:layout_width="match_parent"
            android:layout_below="@id/profile_edit_phone_til"
            android:layout_marginTop="@dimen/m20dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/profile_edit_email"
                style="@style/AppTheme.EditText.bg_holo_dark"
                android:inputType="textEmailAddress"
                android:hint="Email"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        style="@style/AppTheme.OrangeButton"
        android:background="@color/primary_orange"
        android:id="@+id/profile_save_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:paddingBottom="@dimen/m9dp"
        android:paddingTop="@dimen/m9dp"
        android:foregroundGravity="center"
        android:text="SAVE"/>

</RelativeLayout>