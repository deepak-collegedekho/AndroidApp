<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_edit_image_layout"
        layout="@layout/layout_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profile_save_button"
        android:layout_below="@id/include_edit_image_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/m30dp"

            android:paddingRight="@dimen/m30dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/profile_edit_name_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m10dp">

                <EditText
                    android:id="@+id/profile_edit_name"
                    style="@style/AppTheme.EditText.bg_holo_dark"
                    android:hint="Name"
                    android:inputType="textCapWords"
                    android:maxLength="35" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/profile_edit_phone_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_edit_name_til"
                android:layout_marginTop="@dimen/m10dp">

                <EditText
                    android:id="@+id/profile_edit_phone"
                    style="@style/AppTheme.EditText.bg_holo_dark"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLength="10" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/profile_edit_email_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_edit_phone_til"
                android:layout_marginTop="@dimen/m10dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/profile_edit_email"
                    style="@style/AppTheme.EditText.bg_holo_dark"
                    android:hint="Email"
                    android:visibility="gone"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:id="@+id/user_exams_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_layout_border"
                android:layout_marginTop="@dimen/m20dp"
                android:paddingBottom="@dimen/m5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/m4dp"
                    android:background="@drawable/bg_button_blue"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Exams"
                        android:padding="@dimen/m5dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/m6dp"
                        android:layout_weight=".8"
                        android:textColor="@color/white" />

                    <ImageView  android:id="@+id/btn_edit_exams"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/m10dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/edit_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/exams_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/user_education_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m20dp"
                android:paddingBottom="@dimen/m5dp"
                android:background="@drawable/drawable_layout_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/m4dp"
                    android:background="@drawable/bg_button_blue"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Education"
                        android:padding="@dimen/m5dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/m6dp"
                        android:layout_weight="0.8"
                        android:textColor="@color/white" />

                    <ImageView android:id="@+id/btn_edit_education"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/m10dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/edit_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/education_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/user_streams_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m20dp"
                android:paddingBottom="@dimen/m5dp"
                android:background="@drawable/drawable_layout_border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/m4dp"
                    android:background="@drawable/bg_button_blue"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Streams"
                        android:padding="@dimen/m5dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/m6dp"
                        android:layout_weight="0.8"
                        android:textColor="@color/white" />

                    <ImageView android:id="@+id/btn_edit_streams"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/m10dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/edit_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/streams_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/user_recommended_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m20dp"
                android:paddingBottom="@dimen/m5dp"
                android:background="@drawable/drawable_layout_border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/m4dp"
                    android:background="@drawable/bg_button_blue"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="CD Recommended Streams"
                        android:padding="@dimen/m5dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/m6dp"
                        android:layout_weight="0.8"
                        android:textColor="@color/white" />

                    <ImageView android:id="@+id/btn_edit_recommended"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/m10dp"
                        android:layout_weight="0.2"
                        android:visibility="gone"
                        android:src="@drawable/edit_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recommended_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
                <LinearLayout android:id="@+id/psychometric_test_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Not Taken Psychometric Test Yet?"
                        />
                    <Button android:id="@+id/btn_take_psychometric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_blue"
                        android:textSize="18sp"
                        android:layout_marginTop="@dimen/m20dp"
                        android:textColor="@color/white"
                        android:padding="@dimen/m10dp"
                        android:text="Take Now"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/profile_save_button"
        style="@style/AppTheme.OrangeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_orange"
        android:foregroundGravity="center"
        android:paddingBottom="@dimen/m9dp"
        android:paddingTop="@dimen/m9dp"
        android:text="SAVE"
        android:textSize="21sp" />

</RelativeLayout>