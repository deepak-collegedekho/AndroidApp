<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/m15dp"
        android:paddingLeft="@dimen/m15dp"
        android:layout_marginTop="@dimen/m20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/profile_edit_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/m10dp">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/profile_edit_name_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m10dp">

                <EditText
                    android:id="@+id/profile_edit_name"
                    style="@style/AppTheme.EditText.bg_holo_dark"
                    android:hint="Name"
                    android:inputType="textCapWords"
                    android:layout_marginTop="@dimen/m10dp"
                    android:maxLength="35" />
                </android.support.design.widget.TextInputLayout>

                 <android.support.design.widget.TextInputLayout
                     android:id="@+id/profile_edit_phone_til"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/m10dp">

                <EditText
                    android:id="@+id/profile_edit_phone"
                    style="@style/AppTheme.EditText.bg_holo_dark"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:layout_marginTop="@dimen/m10dp"
                    android:maxLength="10" />
                 </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/profile_edit_state"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        style="@style/ProfileSpinner"/>

                    <Spinner
                        android:id="@+id/profile_edit_city"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        style="@style/ProfileSpinner"/>

                </LinearLayout>

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Mother Tongue"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Not Available"/>
                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Hindi"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="English"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Others"/>

                </RadioGroup>

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Category"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Not Available"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="General"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="OBC"/>

                    </RadioGroup>
                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="SC"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="ST"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="OTHERS"/>

                </RadioGroup>
            </LinearLayout>
      </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/profile_edit_education_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/m10dp">

                    <Spinner
                        android:id="@+id/profile_edit_sub_level"
                        style="@style/ProfileSpinner"/>

                    <TextView
                        style="@style/ProfileTextView"
                        android:text="Education Type"/>

                    <RadioGroup
                        style="@style/ProfileRadioGroup">

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Full Time"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Part Time"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Executive"/>

                    </RadioGroup>
                    <RadioGroup
                        style="@style/ProfileRadioGroup">

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Distance/Correspondence"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Online"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="NA"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/profile_edit_stream"
                            style="@style/ProfileSpinner"
                            android:layout_width="0dp"
                            android:layout_weight=".5"/>

                        <Spinner
                            android:id="@+id/profile_edit_specialization"
                            style="@style/ProfileSpinner"
                            android:layout_width="0dp"
                            android:layout_weight=".5"/>

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/profile_edit_degree"
                        style="@style/ProfileSpinner"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/profile_edit_current_score"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m10dp">

                            <EditText
                                android:id="@+id/profile_edit_surrent_score"
                                style="@style/AppTheme.EditText.bg_holo_dark"
                                android:hint="Current Score"
                                android:inputType="number" />
                        </android.support.design.widget.TextInputLayout>

                        <Spinner
                            android:id="@+id/profile_edit_scoreType"
                            style="@style/ProfileSpinner"
                            android:layout_width="0dp"
                            android:layout_weight=".5"/>

                    </LinearLayout>

                    <TextView
                        style="@style/ProfileTextView"
                        android:text="Passing Year"/>

                    <RadioGroup
                        style="@style/ProfileRadioGroup">

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="Before 2015"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="2015"/>

                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="2016"/>
                        <RadioButton
                            style="@style/ProfileRadioButton"
                            android:text="2017"/>

                    </RadioGroup>
                    <RadioGroup
                        style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="After 2017"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="NA"/>
                    </RadioGroup>

                    </LinearLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/profile_edit_preferences_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/m10dp">

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Preferred Year"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="2016"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="2017"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="After 2017"/>

                </RadioGroup>

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Preferred Mode"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Full Time"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Part Time"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Executive"/>

                </RadioGroup>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                <RadioButton
                    style="@style/ProfileRadioButton"
                    android:text="Distance"/>

                <RadioButton
                    style="@style/ProfileRadioButton"
                    android:text="Online/E-Learning"/>

                <RadioButton
                    style="@style/ProfileRadioButton"
                    android:text="NA"/>
              </RadioGroup>

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Fee Range"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="0-1Lakh"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="1-2Lakh"/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="2-3Lakh"/>


                </RadioGroup>
                <RadioGroup
                    style="@style/ProfileRadioGroup">

                <RadioButton
                    style="@style/ProfileRadioButton"
                    android:text="3-4Lakh"/>

                <RadioButton
                    style="@style/ProfileRadioButton"
                    android:text="Above 4 Lakh"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/profile_edit_preferred_stream"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                    <Spinner
                        android:id="@+id/profile_edit_preferred_specialization"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/profile_edit_preferred_degrre"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                    <Spinner
                        android:id="@+id/profile_edit_preferred_level"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/profile_edit_preferred_city"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                    <Spinner
                        android:id="@+id/profile_edit_preferred_state"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".5"/>

                </LinearLayout>

                <TextView
                    style="@style/ProfileTextView"
                    android:text="Loan Required"/>

                <RadioGroup
                    style="@style/ProfileRadioGroup">

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="No "/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Yes  "/>

                    <RadioButton
                        style="@style/ProfileRadioButton"
                        android:text="Maybe "/>

                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ProfileTextView"
                        android:layout_width="0dp"
                        android:layout_weight=".35"
                        android:text="Loan Amount Needed"/>

                    <Spinner
                        android:id="@+id/profile_loan_amount_needed"
                        style="@style/ProfileSpinner"
                        android:layout_width="0dp"
                        android:layout_weight=".65"/>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/profile_edit_other_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/m10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profile_edit_father_name_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m10dp">

                    <EditText
                        android:id="@+id/profile_edit_father_name"
                        style="@style/AppTheme.EditText.bg_holo_dark"
                        android:hint="Father Name"
                        android:inputType="textCapWords"
                        android:layout_marginTop="@dimen/m10dp"
                        android:maxLength="35" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profile_edit_mother_name_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m10dp">

                    <EditText
                        android:id="@+id/profile_edit_mother_name"
                        style="@style/AppTheme.EditText.bg_holo_dark"
                        android:hint="Mother Name"
                        android:inputType="textCapWords"
                        android:layout_marginTop="@dimen/m10dp"
                        android:maxLength="35" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profile_edit_coaching_institute_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m10dp">

                    <EditText
                        android:id="@+id/profile_edit_coaching_institute"
                        style="@style/AppTheme.EditText.bg_holo_dark"
                        android:hint="Coaching Institute"
                        android:inputType="textCapWords"
                        android:layout_marginTop="@dimen/m10dp"
                        android:maxLength="35" />
                </android.support.design.widget.TextInputLayout>





            </LinearLayout>
        </android.support.v7.widget.CardView>

  </RelativeLayout>
</ScrollView>