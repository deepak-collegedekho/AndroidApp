<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_exam_heading"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/m16sp"
        android:layout_marginBottom="@dimen/m5dp"
        style="@style/AppTheme.HeadingTextView"
        android:visibility="gone"
        />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:weightSum="1">


    <TextView
        android:id="@+id/exam_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="13sp"
        android:padding="@dimen/m2dp"
        android:layout_marginLeft="@dimen/m2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:shadowDx="1"
        android:textColor="@color/black"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:background="@drawable/bg_exam_text"
        android:shadowColor="@color/app_background"
        android:text="Exams"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.collegedekho.app.widget.ExamYearSpinner
            android:id="@+id/exam_year_spinner"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_exam_spinner"
            android:spinnerMode="dropdown"
            />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>