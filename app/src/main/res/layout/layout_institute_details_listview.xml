<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.LinearLayout.Horizontal"
    android:layout_width="match_parent"
    android:weightSum="10">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5.5"
        style="@style/AppTheme.LinearLayout.Vertical">

            <TextView
                android:id="@+id/card_institute_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_alignParentTop="true"
                android:text="Manipal Institute of Technology"
                android:layout_marginTop="@dimen/m5dp"
                android:textColor="@color/heading_color"
                android:textSize="13sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/card_institute_location"
                style="@style/AppTheme.TextView.size11sp"
                android:text="Manipal, Karnataka | Established in: 1957"/>

            <TextView
                android:id="@+id/card_institute_cources"
                style="@style/AppTheme.TextView.size11sp"
                android:text="18 Courses Available"   />

            <LinearLayout
                android:id="@+id/card_college_facility_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_institute_cources"
                android:orientation="horizontal">

                <include layout="@layout/item_facility" />

                <include layout="@layout/item_facility" />

                <include layout="@layout/item_facility" />

                <include layout="@layout/item_facility" />

                <TextView
                    android:layout_width="@dimen/m25dp"
                    android:layout_height="@dimen/m25dp"
                    android:background="@drawable/bg_grey_circle"
                    android:gravity="center"
                    android:text="+15"
                    android:textSize="10sp"
                    android:textColor="@color/white" />

            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <include layout="@layout/layout_like_button"
            android:layout_width="match_parent"
            app:layout_gravity="top"
            android:layout_weight=".5"
            android:layout_height="0dp"/>

    <include layout="@layout/layout_shortlist"
        android:layout_width="match_parent"
        app:layout_gravity="bottom"
        android:layout_weight=".5"
        android:layout_height="0dp"/>
</LinearLayout>
    <include layout="@layout/layout_remove_expand"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
</LinearLayout>