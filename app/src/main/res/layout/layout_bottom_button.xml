<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/prep_buddies"
        style="@style/AppTheme.Bottom_Button"
        android:layout_marginLeft="15dp"
        android:text="PREP \nBUDDIES"/>

    <TextView
        android:id="@+id/resources_buddies"
        style="@style/AppTheme.Bottom_Button"
        android:layout_toRightOf="@id/prep_buddies"
        android:text="RESOURCE \nBUDDIES"/>
    <TextView
        android:id="@+id/future_buddies"
        style="@style/AppTheme.Bottom_Button"
        android:layout_toRightOf="@id/resources_buddies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUTURE \nBUDDIES"/>
    <TextView
        android:id="@+id/my_alerts"
        style="@style/AppTheme.Bottom_Button"
        android:layout_toRightOf="@id/future_buddies"
        android:layout_marginRight="15dp"
        android:text="MY \n ALERTS "/>
</RelativeLayout>