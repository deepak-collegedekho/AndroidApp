<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/m20dp"
        android:layout_marginRight="@dimen/m20dp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/college_list_layout_RL"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:tag="1"
            android:background="@drawable/rounded_box_light_blue_20px"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" >

                <TextView
                    android:id="@+id/college_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/TAG_HOME_COLLEGE_LIST"
                    android:importantForAccessibility="no"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/m4dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/recommended_colleges_image"/>
                <ImageView
                    android:id="@+id/recommended_colleges_image"
                    android:layout_width="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_cd_white"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/connect_layout_RL"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:tag="2"
            android:layout_marginLeft="@dimen/m5dp"
            android:background="@drawable/rounded_box_light_blue_20px"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/connect_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/TAG_HOME_ASK_AND_CHAT"
                    android:importantForAccessibility="no"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/m4dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/connect_image"/>
                <ImageView
                    android:id="@+id/connect_image"
                    android:layout_width="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_connect"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/m20dp"
        android:layout_marginRight="@dimen/m20dp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/updates_layout_RL"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:tag="4"
            android:background="@drawable/rounded_box_light_blue_20px"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/TAG_HOME_NEWS_AND_UPDATES"
                    android:importantForAccessibility="no"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/m4dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/updates_image"/>
                <ImageView
                    android:id="@+id/updates_image"
                    android:layout_width="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_read"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/prepare_layout_RL"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:tag="3"
            android:layout_marginLeft="@dimen/m5dp"
            android:background="@drawable/rounded_box_light_blue_20px"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/prepare_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/TAG_HOME_PREPARE"
                    android:importantForAccessibility="no"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/m4dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/prepare_image"/>
                <ImageView
                    android:id="@+id/prepare_image"
                    android:layout_width="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_prepare"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>