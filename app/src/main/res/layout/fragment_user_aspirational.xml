<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_points_header"
                android:id="@+id/points_layout"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/m30dp"
                android:layout_marginLeft="@dimen/m30dp"
                android:layout_marginBottom="@dimen/m10dp"
                android:layout_height="wrap_content"/>

        <RelativeLayout
            style="@style/AppTheme.RelativeLayout.Rounded"
            android:layout_height="match_parent"
            android:layout_below="@id/points_layout"
            android:layout_marginTop="@dimen/m20dp"
            android:layout_marginRight="@dimen/m30dp"
            android:layout_marginLeft="@dimen/m30dp"
            android:background="@drawable/rounded_box_blue">

            <TextView
                style="@style/AppTheme.TextView"
                android:id="@+id/aspiration_shareTV"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:maxLines="3"
                android:textSize="16sp"
                android:paddingLeft="@dimen/m20dp"
                android:paddingRight="@dimen/m20dp"
                android:text="HERE'S WHAT YOU SHARED LOOKS LIKE"/>

            <RelativeLayout
                android:id="@+id/aspiration_imageRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aspiration_shareTV">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_aspiration_image"
                     />
                <TextView
                    style="@style/AppTheme.TextView"
                    android:gravity="center"
                    android:text="4326"
                    android:textColor="@color/primary_orange"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_add_inline"
                    android:textSize="19sp"/>
            </RelativeLayout>
            <TextView
                style="@style/AppTheme.TextView"
                android:gravity="center"
                android:layout_marginLeft="@dimen/m15dp"
                android:layout_marginRight="@dimen/m20dp"
                android:layout_below="@id/aspiration_imageRL"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:drawableBottom="@drawable/ic_down_arrow"
                android:text="THESE ARE STUDENTS WHO HAVE THE SIMILAR ASPIRATION. THEY ARE YOUR POTENTIAL FUTURE BUDDIES."/>

        </RelativeLayout>
            <com.melnykov.fab.FloatingActionButton
                style="@style/AppTheme.FAB_Button"
                android:id="@+id/entrance_summery_share"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_two_fingers_up"
                fab:fab_colorNormal="@color/primary_orange"
                fab:fab_colorPressed="@color/primary_orange_dark"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>