<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_splash"
    android:paddingTop="@dimen/m100dp"
    android:paddingBottom="@dimen/m10dp"
    android:paddingLeft="@dimen/m50dp"
    android:paddingRight="@dimen/m50dp">


    <ImageView
        style="@style/AppTheme.ImageView"
        android:src="@drawable/file79"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/m10dp"
        android:weightSum="1">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_sign_in"
                android:layout_weight=".7"
                android:layout_width="0dp"
                facebook:com_facebook_login_text="FACEBOOK LOGIN"
                facebook:com_facebook_logout_text="FACEBOOK LOGIN"
                style="@style/AppTheme.FacebookButton"/>

            <TextView
                android:id="@+id/sign_up_skip"
                style="@style/AppTheme.OrangeButton"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:paddingBottom="@dimen/m5dp"
                android:paddingTop="@dimen/m5dp"
                android:layout_marginLeft="@dimen/m10dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="SKIP"/>
    </LinearLayout>

</LinearLayout>