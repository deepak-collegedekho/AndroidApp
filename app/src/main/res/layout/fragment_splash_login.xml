<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_splash"
    android:paddingTop="@dimen/m100dp"
    android:paddingBottom="@dimen/m10dp"
    android:paddingLeft="@dimen/m50dp"
    android:paddingRight="@dimen/m50dp"
    android:gravity="center_horizontal"
    >


    <ImageView
        style="@style/AppTheme.ImageView"
        android:src="@drawable/file79"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        facebook:com_facebook_login_text="FACEBOOK LOGIN"
        facebook:com_facebook_logout_text="FACEBOOK LOGIN"
        style="@style/AppTheme.FacebookButton"
        />

    <include layout="@layout/layout_or_line"
        />

    <TextView
        android:id="@+id/sign_up_skip"
        style="@style/AppTheme.OrangeButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/m5dp"
        android:paddingTop="@dimen/m5dp"
        android:padding="@dimen/m10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="20sp"
        android:gravity="center"
        android:text="SKIP"
        />



</LinearLayout>