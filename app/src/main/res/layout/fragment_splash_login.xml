<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splash"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/m20dp"
        android:paddingRight="@dimen/m20dp">

        <ImageView
            android:id="@+id/college_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:importantForAccessibility="no"
            android:src="@drawable/college_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Do you know there are"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <LinearLayout
            android:id="@+id/institute_count_ticker_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m10dp"
            android:orientation="horizontal">

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker5"
                style="@style/TickerView.Small"
                app:ticker_animationDuration="1000"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker4"
                style="@style/TickerView.Small"
                app:ticker_animationDuration="1000"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker3"
                style="@style/TickerView.Small"
                app:ticker_animationDuration="1000"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker2"
                style="@style/TickerView.Small"
                app:ticker_animationDuration="1000"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker1"
                style="@style/TickerView.Small"
                app:ticker_animationDuration="1000"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker_plus"
                style="@style/TickerView.Small"
                android:text="+"
                app:ticker_animationDuration="500"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colleges across the world?"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <com.robinhood.ticker.TickerView
            android:id="@id/institute_count_ticker"
            style="@style/TickerView"
            android:layout_marginTop="@dimen/m20dp"
            app:ticker_animationDuration="1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m10dp"
            android:gravity="center"
            android:text="College for you!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/splash_login_proceed"
            style="@style/MaterialButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="Proceed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/m18sp"/>

        <LinearLayout
            android:id="@+id/existing_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/sign_up_skip_description"
            android:importantForAccessibility="yes"
            android:orientation="vertical"
            android:padding="@dimen/m8dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="Existing User"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/splash_login_skip_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="yes"
            android:orientation="vertical"
            android:padding="@dimen/m8dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="@string/TAG_SKIP"
                android:textAllCaps="true"
                android:textColor="@color/dark_blue"
                android:textSize="19sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/splash_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="yes"
            android:orientation="vertical"
            android:padding="@dimen/m8dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="Privacy Policy..."
                android:textAllCaps="true"
                android:textColor="@color/heading_color"
                android:textSize="10sp"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>