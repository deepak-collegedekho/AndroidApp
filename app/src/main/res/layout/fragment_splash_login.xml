<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_splash"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/m20dp"
            android:paddingRight="@dimen/m20dp">

            <ImageView
                android:id="@+id/college_logo"
                android:layout_height="100dp"
                android:layout_width="wrap_content"
                android:src="@drawable/college_logo"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:text="Do you know there are"/>

            <LinearLayout
                android:id="@+id/institute_count_ticker_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m10dp"
                android:orientation="horizontal">

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker5"
                    style="@style/TickerView.Small"
                    app:ticker_animationDuration="1000"/>

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker4"
                    style="@style/TickerView.Small"
                    app:ticker_animationDuration="1000"/>

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker3"
                    style="@style/TickerView.Small"
                    app:ticker_animationDuration="1000"/>

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker2"
                    style="@style/TickerView.Small"
                    app:ticker_animationDuration="1000"/>

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker1"
                    style="@style/TickerView.Small"
                    app:ticker_animationDuration="1000"/>

                <com.robinhood.ticker.TickerView
                    android:id="@id/institute_count_ticker_plus"
                    style="@style/TickerView.Small"
                    android:text="+"
                    app:ticker_animationDuration="500"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="Colleges in India?"/>

            <com.robinhood.ticker.TickerView
                android:id="@id/institute_count_ticker"
                style="@style/TickerView"
                android:layout_marginTop="@dimen/m20dp"
                app:ticker_animationDuration="1000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="@dimen/m10dp"
                android:textStyle="bold"
                android:text="College for you!"/>

            <Button
                android:id="@+id/splash_login_help_me"
                android:layout_width="200dp"
                style="@style/MaterialButton"
                android:layout_marginRight="5dp"
                android:text="Proceed"
                android:textAllCaps="true"
                android:textSize="@dimen/m18sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/splash_login_i_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/m8dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:orientation="vertical"
                android:contentDescription="@string/sign_up_skip_description"
                android:importantForAccessibility="yes">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Know What I want"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:background="@drawable/border_bottom"
                    android:textSize="16sp"
                    android:importantForAccessibility="no"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/splash_login_skip_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:padding="@dimen/m8dp"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:importantForAccessibility="yes">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TAG_SKIP"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/heading_color"
                    android:background="@drawable/border_bottom"
                    android:textSize="19sp"
                    android:importantForAccessibility="no"/>
            </LinearLayout>
    </LinearLayout>
</FrameLayout>