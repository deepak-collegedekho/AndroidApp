<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/step_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_background"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/first_step_user_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_user"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:layout_width="0dp"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:id="@+id/second_step_user_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_user"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <View
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight=".7"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="@color/white"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="match_parent"
                                    android:text="3"
                                    android:textStyle="bold"
                                    android:gravity="center|left"
                                    android:background="@color/white"
                                    android:textColor="@color/app_background"
                                    android:textSize="30sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="13sp"
                                    android:gravity="center|left"
                                    android:text="PREPARE &amp; \nSHORTLIST"/>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="1">

                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="match_parent"
                                    android:text="2"
                                    android:textStyle="bold"
                                    android:gravity="center|left"
                                    android:background="@color/white"
                                    android:textColor="@color/app_background"
                                    android:textSize="30sp"/>

                                <TextView
                                    android:id="@+id/user_cd_recommendation_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="13sp"
                                    android:gravity="center|left"
                                    />

                        </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:background="@color/white"
                        android:textColor="@color/app_background"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/help_us_to_understand_uTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:gravity="center|left"
                        android:textColor="@color/primary_orange"
                        android:text="HELP US \nUNDERSTAND YOU"/>

                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_image"
        android:background="@color/white"
        android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="@dimen/m10dp"
        android:layout_marginBottom="@dimen/m10dp"
        android:layout_marginLeft="@dimen/m30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_information"/>
    </LinearLayout>

</RelativeLayout>