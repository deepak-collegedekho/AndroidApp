<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_uni"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:weightSum="1"
    >
    <include layout="@layout/item_home_tut" />
    <TextView
            android:id="@+id/home_page_stream_label"
            style="@style/AppTheme.HeadingTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="Engineering"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <GridView
            android:id="@+id/home_page_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:horizontalSpacing="@dimen/activity_horizontal_margin"
            android:numColumns="2"
            android:verticalSpacing="6dp"
            android:orientation="vertical"
            tools:listitem="@layout/card_home_widget"
            android:scrollbars="none"
        />
</LinearLayout>