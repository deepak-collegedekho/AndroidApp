<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/Profile_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/app_background"
        android:weightSum="1">


        <RelativeLayout
            android:id="@+id/check_gesture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".43">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                >

                <include layout="@layout/layout_profile_image"
                    android:id="@+id/include_image_layout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="Name : "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/include_image_layout"
                    android:layout_marginTop="50dp"
                    android:layout_alignTop="@id/include_image_layout"
                    />
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal"
                    android:text="Phone : "
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/include_image_layout"
                    android:layout_below="@id/user_name"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <include layout="@layout/layout_home_options"
            android:id="@+id/include_layout_profile_widget"
            android:layout_height="0dp"
            android:layout_weight=".55"
            android:layout_width="match_parent"/>
    </LinearLayout>

</RelativeLayout>