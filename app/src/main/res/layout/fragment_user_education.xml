<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/education_point_layout"
        android:layout_marginBottom="@dimen/m10dp"
        style="@style/AppTheme.RelativeLayout.Rounded">
        <TextView
            style="@style/AppTheme.TextView"
            android:id="@+id/first_login"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="@dimen/m30dp"
            android:paddingLeft="@dimen/m30dp"
            android:maxLines="3"
            android:textSize="16sp"
            android:text="CONGRATULATIONS ON YOUR FIRST LOGIN"/>

        <include layout="@layout/layout_points_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_login"
            android:paddingTop="@dimen/m12dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/step_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/education_point_layout"
        android:textSize="17sp"
        android:paddingRight="@dimen/m30dp"
        android:paddingLeft="@dimen/m30dp"
        android:paddingBottom="@dimen/m15dp"
        android:text="YOU ARE JUST 3 STEPS AWAY FROM FINDING YOUR COLLEGES"/>

    <LinearLayout
        android:id="@+id/user_education_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/step_textview"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Preparing for Exams"
        android:paddingRight="@dimen/m10dp"/>
    <ToggleButton
        android:id="@+id/is_user_preparing"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_toggle_on_off"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="@dimen/m6dp"/>

</LinearLayout>

</RelativeLayout>