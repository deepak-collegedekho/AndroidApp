<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/user_education_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m3dp"
        android:layout_marginLeft="@dimen/m10dp"
        app:srcCompat="@drawable/ic_navigation_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.profileTextView"
        android:text="PROFILE"
        android:paddingBottom="@dimen/m7dp"
        android:paddingTop="@dimen/m7dp"
        android:textSize="16sp"
        android:background="@color/primary_color"
        android:paddingLeft="@dimen/m20dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <include
            android:id="@+id/include_edit_image_layout"
            layout="@layout/layout_profile_image_small"
            android:layout_width="90dp"
            android:layout_margin="@dimen/m4dp"
            android:layout_height="90dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_education_name_layout"
                style="@style/AppTheme.profileInfoTLayout"
                android:layout_marginTop="@dimen/m20dp">

                <TextView
                    style="@style/AppTheme.profileTextViewTitle"
                    android:textColor="@color/black"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/user_education_name"
                    android:textColor="@color/black"
                    style="@style/AppTheme.profileInfoTextView"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_education_edit_name_til"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/m5dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/user_education_name_edit_text"
                    style="@style/AppTheme.EditText"
                    android:layout_height="@dimen/m35dp"
                    android:hint="Name"
                    android:maxLines="1"
                    android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords"
                    android:maxLength="35" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/user_education_phone_layout"
                style="@style/AppTheme.profileInfoTLayout"
                android:layout_marginTop="@dimen/m10dp">

                <TextView
                    style="@style/AppTheme.profileTextViewTitle"
                    android:textColor="@color/black"
                    android:text="Phone"/>

                <TextView
                    android:id="@+id/user_education_phone"
                    android:textColor="@color/black"
                    style="@style/AppTheme.profileInfoTextView"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_education_edit_phone_til"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/user_education_phone_edit_text"
                    style="@style/AppTheme.EditText"
                    android:layout_height="@dimen/m35dp"
                    android:hint="Phone"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="10" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_education_education_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m5dp"
        android:paddingLeft="@dimen/m16dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <TextView
            style="@style/AppTheme.profileTextViewTitle"
            android:layout_width="0dp"
            android:layout_weight=".34"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/m18sp"
            android:text="Education  :"/>

        <TextView
            android:id="@+id/user_education_level"
            android:layout_width="0dp"
            android:layout_weight=".51"
            style="@style/AppTheme.profileTextViewTitle"/>

        <ImageView
            android:id="@+id/user_education_level_edit_btn"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:visibility="visible"
            android:padding="@dimen/m8dp"
            android:layout_gravity="right|top"
            app:srcCompat="@drawable/ic_edit_vector"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/m2dp"/>

    <LinearLayout
        android:id="@+id/user_education_stream_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m5dp"
        android:paddingLeft="@dimen/m16dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <TextView
            style="@style/AppTheme.profileTextViewTitle"
            android:layout_width="0dp"
            android:layout_weight=".34"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/m18sp"
            android:text="Streams    :"/>

        <TextView
            android:id="@+id/user_education_stream"
            android:layout_width="0dp"
            android:layout_weight=".51"
            style="@style/AppTheme.profileTextViewTitle"/>

        <ImageView
            android:id="@+id/user_education_stream_edit_btn"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:visibility="visible"
            android:padding="@dimen/m8dp"
            android:layout_gravity="right|top"
            app:srcCompat="@drawable/ic_edit_vector"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/m2dp"/>

    <LinearLayout
        android:id="@+id/user_education_exams_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m5dp"
        android:paddingLeft="@dimen/m16dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <TextView
            style="@style/AppTheme.profileTextViewTitle"
            android:layout_width="0dp"
            android:layout_weight=".34"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/m18sp"
            android:text="Exams       :"/>

        <TextView
            android:id="@+id/user_education_exams"
            android:layout_width="0dp"
            android:layout_weight=".51"
            style="@style/AppTheme.profileTextViewTitle"/>

        <ImageView
            android:id="@+id/user_education_exams_edit_btn"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:visibility="visible"
            android:padding="@dimen/m8dp"
            android:layout_gravity="right|top"
            app:srcCompat="@drawable/ic_edit_vector"/>
    </LinearLayout>


    <TextView
        android:id="@+id/user_education_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/your_current_stream"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m8dp"
        android:paddingLeft="@dimen/m15dp"
        android:textSize="@dimen/m19sp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/user_education_heading_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m2dp"
        android:background="@color/light_blue"
        android:layout_marginLeft="@dimen/m15dp"
        android:layout_marginRight="@dimen/m15dp"
        />

    <RadioGroup
        android:id="@+id/user_education_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/m15dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/user_education_radio_button_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m18sp"
            android:tag="8"
            android:layout_marginTop="@dimen/m10dp"
            android:text="@string/currently_in_school"/>

        <RadioButton
            android:id="@+id/user_education_radio_button_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m18sp"
            android:tag="1"
            android:layout_marginTop="@dimen/m10dp"
            android:text="@string/currently_in_graduation"/>

        <RadioButton
            android:id="@+id/user_education_radio_button_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m18sp"
            android:tag="5"
            android:layout_marginTop="@dimen/m10dp"
            android:text="@string/currently_in_pg"/>

    </RadioGroup>

    <LinearLayout
       android:id="@+id/go_to_dashboard_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:padding="@dimen/m20dp"
        android:visibility="gone"
        android:weightSum="1">

        <Button
            android:id="@+id/go_to_recommended"
            style="@style/AppTheme.OrangeButton"
            android:textSize="18sp"
            android:visibility="visible"
            android:text="@string/go_to_recommended"/>

        <Button
            android:id="@+id/go_to_dash_board"
            style="@style/AppTheme.OrangeButton"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/m15dp"
            android:text="@string/go_to_me_dash_board"/>

        <Button
            android:id="@+id/go_to_profile"
            style="@style/AppTheme.OrangeButton"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/m15dp"
            android:text="@string/go_to_me_profile"/>

    </LinearLayout>

</LinearLayout>



    <LinearLayout
        android:id="@+id/user_education_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/m45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/m20dp"
        android:layout_marginBottom="@dimen/m10dp"
        android:padding="@dimen/m8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TAG_SKIP"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/skip_btn_color"
            android:background="@drawable/border_bottom"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/user_education_next_button"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/m45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/m20dp"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_marginBottom="@dimen/m10dp"
        android:padding="@dimen/m15dp"
        app:srcCompat="@drawable/ic_arrow_forward_vector"
        android:background="@color/primary_orange"
        android:visibility="gone"
        android:textSize="17sp"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/search_exam_container"
        android:layout_below="@id/user_education_top_layout"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/m15dp"
        android:paddingRight="@dimen/m15dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/search_exam_hint"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Exam"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m40dp"
            />

        <android.support.v7.widget.SearchView
            android:id="@+id/auto_search_exam"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:tag="1" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_education_stream_recycler_view"
        android:paddingLeft="@dimen/m2dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/search_exam_container"
        android:layout_above="@id/user_education_skip_button"
        android:layout_width="match_parent"/>


</RelativeLayout>