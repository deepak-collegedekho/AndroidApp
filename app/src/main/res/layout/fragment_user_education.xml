<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="50dp"
        android:background="@color/app_background"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/education_point_layout"
        android:layout_marginBottom="@dimen/m10dp"
        android:visibility="gone"
        style="@style/AppTheme.RelativeLayout.Rounded">
        <TextView
            style="@style/AppTheme.TextView"
            android:id="@+id/first_login"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="@dimen/m30dp"
            android:paddingLeft="@dimen/m30dp"
            android:maxLines="3"
            android:textSize="16sp"
            android:text="CONGRATULATIONS ON YOUR FIRST LOGIN"/>

        <include layout="@layout/layout_points_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_login"
            android:paddingTop="@dimen/m12dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/step_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/education_point_layout"
        android:textSize="17sp"
        android:paddingRight="@dimen/m30dp"
        android:paddingLeft="@dimen/m30dp"
        android:paddingBottom="@dimen/m15dp"
        android:text="YOU ARE JUST 3 STEPS AWAY FROM FINDING YOUR COLLEGES"/>

    <include layout="@layout/layout_user_step"
        android:id="@+id/step_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_textview"/>

    <LinearLayout
        android:id="@+id/user_education_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/step_ui"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:background="@color/app_background"
    android:layout_alignParentBottom="true"
    android:weightSum="1">

    <TextView
        style="@style/AppTheme.OrangeButton"
        android:id="@+id/user_education_submit_button"
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_marginTop="0dp"
        android:layout_height="match_parent"
        android:text="SUBMIT"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".6"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="left">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Preparing for Exams"
        android:paddingLeft="@dimen/m5dp"/>

    <ToggleButton
        android:id="@+id/is_user_preparing"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_toggle_on_off"
        android:textOff=""
        android:textOn=""
        android:layout_marginLeft="@dimen/m15dp"/>
</LinearLayout>

</LinearLayout>

</RelativeLayout>