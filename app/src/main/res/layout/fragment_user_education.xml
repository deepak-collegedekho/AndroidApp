<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/m10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_navigation_icon"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/user_education_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10dp"
            android:layout_below="@id/image_layout"
            android:gravity="center"
            android:layout_margin="@dimen/m30dp"
            android:background="@color/primary_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="@dimen/m50dp"
                app:srcCompat="@drawable/ic_phone"/>


            <TextView
                style="@style/AppTheme.profileTextViewTitle"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Phone"/>

            <TextView
                android:id="@+id/user_education_phone"
                android:layout_width="0dp"
                android:layout_weight=".6"
                style="@style/AppTheme.profileTextViewTitle"/>


        </LinearLayout>

    <LinearLayout
        android:id="@+id/user_education_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/m20dp"
        android:layout_marginBottom="@dimen/m30dp"
        android:padding="@dimen/m8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TAG_SKIP"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/skip_btn_color"
            android:background="@drawable/border_bottom"
            android:textSize="18sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/user_education_phone_layout"
            android:layout_above="@id/user_education_skip_button"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/m20dp"
            android:background="@color/white"
            android:padding="@dimen/m20dp"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/m20sp"
                android:fontFamily="serif"
                android:textColor="@color/primary_text_default_material_dark"
                android:text="What are you upto ?" />

                <Button
                    android:id="@+id/user_education_school"
                    style="@style/AppTheme.OrangeButton"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/m30dp"
                    android:text="@string/currently_in_school"/>

                <Button
                    android:id="@+id/user_education_college"
                    style="@style/AppTheme.OrangeButton"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/m30dp"
                    android:text="@string/currently_in_graduation"/>
        </LinearLayout>

</RelativeLayout>