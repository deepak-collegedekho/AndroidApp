<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/primary_color_dark</item>
    </style>

    <style name="AppTheme.BlueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>

    <style name="AppTheme.TextHomeHead" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextHomeSubHead" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_subhead</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Divider1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="AppTheme.CardView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="cardBackgroundColor">@color/primary_color_90</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>

    </style>

    <style name="AppTheme.CardView.CenterGravity" parent="AppTheme.CardView">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.CardView.NoElevation" parent="AppTheme.CardView">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppTheme.CardView.WhiteBackground" parent="AppTheme.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.InfoCardView" parent="AppTheme.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>
