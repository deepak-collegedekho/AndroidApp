<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/j_layout1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/j_options1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHERE YOU ARE"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/j_wheel_header_color"
            android:textColor="@android:color/black"
            android:gravity="center"/>


        <cn.jeesoft.widget.pickerview.LoopView
            android:id="@+id/j_options1"
            android:padding="4dip"
            android:layout_below="@id/j_options1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/j_layout2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/j_options2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STREAMS"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/j_wheel_header_color"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <cn.jeesoft.widget.pickerview.LoopView
            android:id="@+id/j_options2"
            android:padding="3dip"
            android:layout_below="@id/j_options2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/j_layout3"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/j_options3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MARKS"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/j_wheel_header_color"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <cn.jeesoft.widget.pickerview.LoopView
            android:id="@+id/j_options3"
            android:padding="3dip"
            android:layout_below="@id/j_options3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
